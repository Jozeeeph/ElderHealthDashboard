{% extends 'base.html.twig' %}

{% block title %}Gestion des Rendez-vous{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="mb-4">Gestion des Rendez-vous</h1>
    
    <!-- Onglets -->
    <ul class="nav nav-tabs" id="appointmentTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="rdv-tab" data-bs-toggle="tab" data-bs-target="#rdv" type="button" role="tab">
                Rendez-vous <span class="badge bg-secondary">{{ rendezVousList|length }}</span>
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="types-tab" data-bs-toggle="tab" data-bs-target="#types" type="button" role="tab">
                Types de Rendez-vous <span class="badge bg-secondary">{{ typesRendezVous|length }}</span>
            </button>
        </li>
    </ul>

    <!-- Contenu des onglets -->
    <div class="tab-content" id="appointmentTabsContent">
        
        <!-- Onglet Rendez-vous -->
        <div class="tab-pane fade show active" id="rdv" role="tabpanel">
            <div class="card mt-3">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Liste des Rendez-vous</h5>
                    <a href="{{ path('appointment_new') }}" class="btn btn-success btn-sm">
                        <i class="fas fa-plus"></i> Ajouter un Rendez-vous
                    </a>
                </div>
                <div class="card-body">
                    {% if rendezVousList is empty %}
                        <div class="alert alert-info">Aucun rendez-vous programmé.</div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Date</th>
                                        <th>Heure</th>
                                        <th>Lieu</th>
                                        <th>Type</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for rdv in rendezVousList %}
                                    <tr>
                                        <td>{{ rdv.id }}</td>
                                        <td>{{ rdv.date|date('d/m/Y') }}</td>
                                        <td>{{ rdv.heure|date('H:i') }}</td>
                                        <td>{{ rdv.lieu }}</td>
                                        <td>
                                            <span class="badge bg-info">
                                                {{ rdv.typeRendezVous.type }}
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="{{ path('appointment_show', {'id': rdv.id}) }}" 
                                                   class="btn btn-outline-info" title="Voir">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="{{ path('appointment_edit', {'id': rdv.id}) }}" 
                                                   class="btn btn-outline-primary" title="Modifier">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="{{ path('appointment_delete', {'id': rdv.id}) }}" 
                                                   class="btn btn-outline-danger" title="Supprimer"
                                                   onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce rendez-vous ?')">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Onglet Types de Rendez-vous -->
        <div class="tab-pane fade" id="types" role="tabpanel">
            <div class="card mt-3">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Types de Rendez-vous</h5>
                    <a href="{{ path('appointment_type_new') }}" class="btn btn-success btn-sm">
                        <i class="fas fa-plus"></i> Ajouter un Type
                    </a>
                </div>
                <div class="card-body">
                    {% if typesRendezVous is empty %}
                        <div class="alert alert-info">Aucun type de rendez-vous défini.</div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Type</th>
                                        <th>Tarif</th>
                                        <th>Durée</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for type in typesRendezVous %}
                                    <tr>
                                        <td>{{ type.id }}</td>
                                        <td><strong>{{ type.type }}</strong></td>
                                        <td>{{ type.Tarif }} DT</td>
                                        <td>{{ type.duree }}</td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="{{ path('appointment_type_show', {'id': type.id}) }}" 
                                                   class="btn btn-outline-info" title="Voir">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="{{ path('appointment_type_edit', {'id': type.id}) }}" 
                                                   class="btn btn-outline-primary" title="Modifier">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="{{ path('appointment_type_delete', {'id': type.id}) }}" 
                                                   class="btn btn-outline-danger" title="Supprimer"
                                                   onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce type ?')">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .nav-tabs .nav-link {
        font-weight: 500;
    }
    .nav-tabs .nav-link.active {
        font-weight: 600;
    }
    .badge {
        font-size: 0.7em;
        margin-left: 5px;
    }
    .btn-group-sm > .btn {
        padding: 0.25rem 0.5rem;
    }
</style>

<script>
    // Garder l'onglet actif après rafraîchissement
    document.addEventListener('DOMContentLoaded', function() {
        const activeTab = localStorage.getItem('activeAppointmentTab');
        if (activeTab) {
            const tabTrigger = new bootstrap.Tab(document.querySelector(activeTab));
            tabTrigger.show();
        }
        
        // Sauvegarder l'onglet actif
        document.querySelectorAll('#appointmentTabs button').forEach(tab => {
            tab.addEventListener('click', function(e) {
                localStorage.setItem('activeAppointmentTab', e.target.getAttribute('data-bs-target'));
            });
        });
    });
</script>
{% endblock %}