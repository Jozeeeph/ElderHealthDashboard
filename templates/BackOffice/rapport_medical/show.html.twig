{% extends 'base.html.twig' %}

{% block title %}Rapport medical{% endblock %}

{% block body %}
<style>
.rapport-page {
    background: #f4f6f9;
    border: 1px solid #e5e7eb;
    border-radius: 14px;
    padding: 20px;
}

.rapport-top {
    display: flex;
    gap: 12px;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap;
    margin-bottom: 16px;
}

.rapport-title {
    margin: 0;
    font-size: 1.5rem;
    font-weight: 700;
    color: #0f172a;
}

.rapport-subtitle {
    margin-top: 4px;
    color: #64748b;
    font-size: 0.95rem;
}

.rapport-actions {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
}

.rapport-actions .btn {
    border-radius: 8px;
}

.rapport-summary {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 10px;
    margin-bottom: 14px;
}

.rapport-kpi {
    background: #ffffff;
    border: 1px solid #e2e8f0;
    border-radius: 10px;
    padding: 12px;
}

.rapport-kpi-label {
    font-size: 0.76rem;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: #64748b;
    margin-bottom: 4px;
    font-weight: 600;
}

.rapport-kpi-value {
    color: #0f172a;
    font-size: 1rem;
    font-weight: 700;
}

.rapport-layout {
    display: grid;
    grid-template-columns: minmax(220px, 320px) 1fr;
    gap: 14px;
}

.rapport-card {
    background: #ffffff;
    border: 1px solid #e2e8f0;
    border-radius: 10px;
    padding: 14px;
}

.rapport-card-title {
    font-size: 1rem;
    font-weight: 700;
    color: #0f172a;
    margin-bottom: 10px;
}

.rapport-meta-item {
    margin-bottom: 10px;
}

.rapport-meta-item:last-child {
    margin-bottom: 0;
}

.rapport-meta-label {
    color: #64748b;
    font-size: 0.76rem;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    margin-bottom: 2px;
}

.rapport-meta-value {
    color: #1e293b;
    font-weight: 600;
}

.rapport-block {
    border: 1px solid #e2e8f0;
    border-radius: 10px;
    background: #ffffff;
    padding: 14px;
    margin-bottom: 12px;
}

.rapport-block:last-child {
    margin-bottom: 0;
}

.rapport-block-title {
    color: #0f172a;
    font-size: 1.02rem;
    font-weight: 700;
    margin-bottom: 8px;
}

.rapport-block-text {
    color: #334155;
    line-height: 1.65;
    white-space: pre-line;
}

.rapport-back {
    margin-top: 14px;
}

.rapport-modal .modal-content {
    border-radius: 12px;
    border: 1px solid #e2e8f0;
}

@media (max-width: 992px) {
    .rapport-layout {
        grid-template-columns: 1fr;
    }
}
</style>

<div class="container py-4">
    <div class="rapport-page">
        <div class="rapport-top">
            <div>
                <h1 class="rapport-title"><i class="bi bi-file-medical me-2"></i>Rapport medical</h1>
                <div class="rapport-subtitle">
                    Consultation {{ rapport.consultation.id }} - {{ rapport.consultation.patient.prenom }} {{ rapport.consultation.patient.nom }}
                </div>
            </div>

            <div class="rapport-actions">
                <a class="btn btn-outline-secondary" href="{{ path('rapport_medical_pdf', {'id': rapport.idRapport}) }}">
                    <i class="bi bi-file-earmark-pdf me-1"></i>PDF
                </a>
                <button type="button"
                        class="btn btn-outline-primary"
                        data-bs-toggle="modal"
                        data-bs-target="#rapportEditModal"
                        data-edit-url="{{ path('rapport_medical_edit', {'id': rapport.idRapport}) }}">
                    <i class="bi bi-pencil-square me-1"></i>Modifier
                </button>
                <button type="button"
                        class="btn btn-outline-danger"
                        data-bs-toggle="modal"
                        data-bs-target="#rapportDeleteModal"
                        data-delete-url="{{ path('rapport_medical_delete', {'id': rapport.idRapport}) }}"
                        data-delete-token="{{ csrf_token('delete_rapport_' ~ rapport.idRapport) }}">
                    <i class="bi bi-trash me-1"></i>Supprimer
                </button>
            </div>
        </div>

        <div class="rapport-summary">
            <div class="rapport-kpi">
                <div class="rapport-kpi-label">Niveau de gravite</div>
                <div class="rapport-kpi-value">{{ rapport.niveauGravite }}</div>
            </div>
            <div class="rapport-kpi">
                <div class="rapport-kpi-label">Date du rapport</div>
                <div class="rapport-kpi-value">{{ rapport.dateRapport ? rapport.dateRapport|date('d/m/Y H:i') : '-' }}</div>
            </div>
            <div class="rapport-kpi">
                <div class="rapport-kpi-label">Consultation</div>
                <div class="rapport-kpi-value">#{{ rapport.consultation.id }}</div>
            </div>
        </div>

        <div class="rapport-layout">
            <aside class="rapport-card">
                <div class="rapport-card-title">Informations</div>

                <div class="rapport-meta-item">
                    <div class="rapport-meta-label">Patient</div>
                    <div class="rapport-meta-value">{{ rapport.consultation.patient.prenom }} {{ rapport.consultation.patient.nom }}</div>
                </div>

                <div class="rapport-meta-item">
                    <div class="rapport-meta-label">Gravite</div>
                    <div class="rapport-meta-value">{{ rapport.niveauGravite }}</div>
                </div>

                <div class="rapport-meta-item">
                    <div class="rapport-meta-label">Date</div>
                    <div class="rapport-meta-value">{{ rapport.dateRapport ? rapport.dateRapport|date('d/m/Y H:i') : '-' }}</div>
                </div>

                {% if rapport.fichierPath %}
                    <div class="rapport-meta-item">
                        <div class="rapport-meta-label">Fichier joint</div>
                        <div class="rapport-meta-value">
                            <a href="{{ asset(rapport.fichierPath) }}" target="_blank" rel="noopener">Voir le fichier</a>
                        </div>
                    </div>
                {% endif %}
            </aside>

            <section>
                <div class="rapport-block">
                    <div class="rapport-block-title"><i class="bi bi-clipboard2-pulse me-1"></i>Diagnostic</div>
                    <div class="rapport-block-text">{{ rapport.diagnostic }}</div>
                </div>

                <div class="rapport-block">
                    <div class="rapport-block-title"><i class="bi bi-lightbulb me-1"></i>Recommandations</div>
                    <div class="rapport-block-text">{{ rapport.recommandations }}</div>
                </div>
            </section>
        </div>

        <div class="rapport-back">
            <a class="btn btn-light" href="{{ path('consultation_index') }}">
                <i class="bi bi-arrow-left me-1"></i>Retour
            </a>
        </div>
    </div>
</div>

<div class="modal fade rapport-modal" id="rapportEditModal" tabindex="-1" aria-labelledby="rapportEditModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="rapportEditModalLabel"><i class="bi bi-pencil-square me-1"></i>Modifier rapport medical</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <div class="modal-body">
                <div class="text-muted small">Chargement...</div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade rapport-modal" id="rapportDeleteModal" tabindex="-1" aria-labelledby="rapportDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="rapportDeleteModalLabel"><i class="bi bi-trash me-1"></i>Confirmer la suppression</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <div class="modal-body">
                <div class="mb-2">Voulez-vous vraiment supprimer ce rapport ?</div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Annuler</button>
                <form method="post" action="">
                    <input type="hidden" name="_token" value="">
                    <button type="submit" class="btn btn-danger">Supprimer</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const editModal = document.getElementById('rapportEditModal');
    const deleteModal = document.getElementById('rapportDeleteModal');
    if (!editModal || !deleteModal) return;

    const loadFormIntoModal = async (modal, url) => {
        const modalBody = modal.querySelector('.modal-body');
        if (!modalBody) return;
        modalBody.innerHTML = '<div class="text-muted small">Chargement...</div>';

        try {
            const response = await fetch(url, {
                headers: { 'X-Requested-With': 'XMLHttpRequest' }
            });
            if (!response.ok) {
                throw new Error('Erreur de chargement');
            }
            modalBody.innerHTML = await response.text();
        } catch (e) {
            modalBody.innerHTML = '<div class="alert alert-danger mb-0">Impossible de charger le formulaire.</div>';
        }
    };

    editModal.addEventListener('show.bs.modal', async (event) => {
        const trigger = event.relatedTarget;
        if (!trigger) return;
        const editUrl = trigger.getAttribute('data-edit-url');
        if (!editUrl) return;
        await loadFormIntoModal(editModal, editUrl);
    });

    deleteModal.addEventListener('show.bs.modal', (event) => {
        const trigger = event.relatedTarget;
        if (!trigger) return;

        const deleteUrl = trigger.getAttribute('data-delete-url');
        const deleteToken = trigger.getAttribute('data-delete-token');
        const form = deleteModal.querySelector('form');
        const tokenInput = deleteModal.querySelector('input[name="_token"]');

        if (form && deleteUrl) {
            form.setAttribute('action', deleteUrl);
        }
        if (tokenInput && deleteToken) {
            tokenInput.value = deleteToken;
        }
    });
});
</script>
{% endblock %}
