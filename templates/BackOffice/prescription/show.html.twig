{% extends 'base.html.twig' %}

{% block title %}Prescription{% endblock %}

{% block body %}
<style>
.prescription-shell {
    --ink: #1e2a2f;
    --muted: #6c7a80;
    --brand: #0e8aa7;
    --brand-2: #2bbf9f;
    --card: #ffffff;
    --ring: rgba(14, 138, 167, 0.2);
    --accent: #ffb347;
    --accent-2: #ff6b6b;
    --accent-3: #6a5af9;
    --accent-4: #34c759;
}

.prescription-header {
    background: linear-gradient(135deg, #eef2ff 0%, #f1f7f4 100%);
    border-radius: 18px 28px 18px 28px;
    padding: 16px 20px;
    border: 1px solid #e1e7f0;
}

.prescription-title {
    color: var(--ink);
}

.prescription-actions .btn {
    border-radius: 999px;
    padding: 8px 16px;
}

.prescription-card {
    border: 1px solid #e6edf0;
    border-radius: 18px 28px 18px 28px;
    background: var(--card);
}

.prescription-pill {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 12px;
    border-radius: 999px;
    background: #eef6f8;
    border: 1px solid #d6e7ec;
    color: #1a5b6b;
    font-size: 0.85rem;
    font-weight: 600;
}

.prescription-hero {
    border-radius: 22px 32px 22px 32px;
    background: linear-gradient(135deg, #fff4e6 0%, #eef6ff 55%, #f3fff6 100%);
    border: 1px solid #f0e2d5;
    padding: 18px 20px;
    box-shadow: 0 16px 40px rgba(30, 42, 47, 0.12);
}

.prescription-hero .hero-title {
    font-weight: 800;
    color: var(--ink);
    letter-spacing: 0.2px;
}

.prescription-hero .hero-subtitle {
    color: var(--muted);
    font-size: 0.95rem;
}

.prescription-stat {
    background: #ffffff;
    border: 1px solid #e6edf0;
    border-radius: 16px 22px 16px 22px;
    padding: 12px 14px;
    display: flex;
    gap: 10px;
    align-items: center;
}

.prescription-stat .emoji {
    font-size: 1.2rem;
}

.prescription-stat .label {
    color: var(--muted);
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.prescription-stat .value {
    font-weight: 700;
    color: var(--ink);
}

.prescription-section {
    border-radius: 20px 28px 20px 28px;
    border: 1px solid #e6edf0;
    background: #ffffff;
    padding: 16px 18px;
}

.prescription-section h3 {
    font-size: 1rem;
    font-weight: 700;
    margin-bottom: 10px;
    color: var(--ink);
}

.prescription-chip {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 12px;
    border-radius: 999px;
    border: 1px solid #e6edf0;
    background: #f8fbfc;
    color: #1a5b6b;
    font-weight: 600;
    font-size: 0.85rem;
}

.prescription-badge {
    border-radius: 999px;
    padding: 6px 12px;
    font-weight: 600;
    border: 1px solid #e6edf0;
    background: #ffffff;
}

.prescription-actions .btn {
    border-radius: 999px;
}

.prescription-modal .modal-content {
    border: none;
    border-radius: 20px 28px 20px 28px;
    box-shadow: 0 18px 48px rgba(30, 42, 47, 0.2);
    background: #ffffff;
}

.prescription-modal .modal-header {
    border: 0;
    background: linear-gradient(135deg, #eef2ff 0%, #f1f7f4 100%);
    border-radius: 20px 28px 0 0;
    padding: 16px 20px;
}

.prescription-modal .modal-title {
    font-weight: 700;
    color: #1e2a2f;
}

.prescription-modal .modal-body {
    padding: 18px 20px 22px;
    background: #ffffff;
}
</style>

<div class="prescription-shell container py-4">
    <div class="prescription-hero mb-4">
        <div class="d-flex flex-wrap justify-content-between align-items-start gap-3">
            <div>
                <div class="d-flex align-items-center gap-2 mb-1">
                    <span class="prescription-badge">üíä Prescription</span>
                    <span class="prescription-badge">üßë‚Äç‚öïÔ∏è Sant√©</span>
                </div>
                <h1 class="hero-title mb-1">Fiche de prescription</h1>
                <div class="hero-subtitle">
                    Consultation #{{ prescription.consultation.id }} ‚Ä¢
                    {{ prescription.consultation.patient.prenom }} {{ prescription.consultation.patient.nom }}
                </div>
            </div>
            <div class="prescription-actions d-flex flex-wrap gap-2">
                <a class="btn btn-outline-secondary" href="{{ path('prescription_pdf', {'id': prescription.idPrescription}) }}">üìÑ T√©l√©charger PDF</a>
                <button type="button"
                        class="btn btn-outline-primary"
                        data-bs-toggle="modal"
                        data-bs-target="#prescriptionEditModal"
                        data-edit-url="{{ path('prescription_edit', {'id': prescription.idPrescription}) }}">
                    ‚úèÔ∏è Modifier
                </button>
                <button type="button"
                        class="btn btn-outline-danger"
                        data-bs-toggle="modal"
                        data-bs-target="#prescriptionDeleteModal"
                        data-delete-url="{{ path('prescription_delete', {'id': prescription.idPrescription}) }}"
                        data-delete-token="{{ csrf_token('delete_prescription_' ~ prescription.idPrescription) }}">
                    üóëÔ∏è Supprimer
                </button>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-12 col-lg-4">
            <div class="prescription-section h-100">
                <h3>üíä M√©dicaments</h3>
                <div class="fw-semibold">{{ prescription.medicaments }}</div>
                <div class="mt-3">
                    <h3>üßæ Consignes</h3>
                    <div class="fw-semibold">{{ prescription.consignes ?: '-' }}</div>
                </div>
                <div class="mt-4 d-flex flex-wrap gap-2">
                    <span class="prescription-chip">üë§ {{ prescription.consultation.patient.prenom }} {{ prescription.consultation.patient.nom }}</span>
                    <span class="prescription-chip">üìç Consultation #{{ prescription.consultation.id }}</span>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-8">
            <div class="prescription-section h-100">
                <h3>‚ú® Param√®tres du traitement</h3>
                <div class="row g-3">
                    <div class="col-12 col-md-6">
                        <div class="prescription-stat">
                            <div class="emoji">‚è±Ô∏è</div>
                            <div>
                                <div class="label">Fr√©quence</div>
                                <div class="value">{{ prescription.frequence }}</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="prescription-stat">
                            <div class="emoji">üß™</div>
                            <div>
                                <div class="label">Dosage</div>
                                <div class="value">{{ prescription.dosage }}</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="prescription-stat">
                            <div class="emoji">üìÜ</div>
                            <div>
                                <div class="label">Dur√©e</div>
                                <div class="value">{{ prescription.dureeTraitement }}</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="prescription-stat">
                            <div class="emoji">üóìÔ∏è</div>
                            <div>
                                <div class="label">P√©riode</div>
                                <div class="value">
                                    {{ prescription.dateDebut ? prescription.dateDebut|date('d/m/Y') : '-' }}
                                    ‚Üí
                                    {{ prescription.dateFin ? prescription.dateFin|date('d/m/Y') : '-' }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mt-4 d-flex flex-wrap gap-2">
                    <span class="prescription-badge">‚≠ê Suivi personnalis√©</span>
                    <span class="prescription-badge">‚úÖ Donn√©es v√©rifi√©es</span>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a class="btn btn-light" href="{{ path('consultation_index') }}">Retour</a>
    </div>
</div>

<div class="modal fade prescription-modal" id="prescriptionEditModal" tabindex="-1" aria-labelledby="prescriptionEditModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="prescriptionEditModalLabel">Modifier prescription</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <div class="modal-body">
                <div class="text-muted small">Chargement...</div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade prescription-modal" id="prescriptionDeleteModal" tabindex="-1" aria-labelledby="prescriptionDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="prescriptionDeleteModalLabel">Confirmer la suppression</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <div class="modal-body">
                <div class="mb-2">Voulez-vous vraiment supprimer cette prescription ?</div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Annuler</button>
                <form method="post" action="">
                    <input type="hidden" name="_token" value="">
                    <button type="submit" class="btn btn-danger">Supprimer</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const editModal = document.getElementById('prescriptionEditModal');
    const deleteModal = document.getElementById('prescriptionDeleteModal');
    if (!editModal || !deleteModal) return;

    const loadFormIntoModal = async (modal, url) => {
        const modalBody = modal.querySelector('.modal-body');
        if (!modalBody) return;
        modalBody.innerHTML = '<div class="text-muted small">Chargement...</div>';
        try {
            const response = await fetch(url, {
                headers: { 'X-Requested-With': 'XMLHttpRequest' }
            });
            if (!response.ok) {
                throw new Error('Erreur de chargement');
            }
            const html = await response.text();
            modalBody.innerHTML = html;
        } catch (e) {
            modalBody.innerHTML = '<div class="alert alert-danger mb-0">Impossible de charger le formulaire.</div>';
        }
    };

    editModal.addEventListener('show.bs.modal', async (event) => {
        const trigger = event.relatedTarget;
        if (!trigger) return;
        const editUrl = trigger.getAttribute('data-edit-url');
        if (!editUrl) return;
        await loadFormIntoModal(editModal, editUrl);
    });

    deleteModal.addEventListener('show.bs.modal', (event) => {
        const trigger = event.relatedTarget;
        if (!trigger) return;
        const deleteUrl = trigger.getAttribute('data-delete-url');
        const deleteToken = trigger.getAttribute('data-delete-token');
        const form = deleteModal.querySelector('form');
        const tokenInput = deleteModal.querySelector('input[name="_token"]');
        if (form && deleteUrl) {
            form.setAttribute('action', deleteUrl);
        }
        if (tokenInput && deleteToken) {
            tokenInput.value = deleteToken;
        }
    });
});
</script>
{% endblock %}
