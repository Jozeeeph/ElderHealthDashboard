{% extends 'base.html.twig' %}

{% block title %}Prescription{% endblock %}

{% block body %}
<style>
.prescription-page {
    background: #f4f7fb;
    border: 1px solid #e2e8f0;
    border-radius: 14px;
    padding: 20px;
}

.prescription-top {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: 12px;
    margin-bottom: 16px;
}

.prescription-title {
    margin: 0;
    font-size: 1.5rem;
    font-weight: 700;
    color: #0f172a;
}

.prescription-subtitle {
    margin-top: 4px;
    color: #64748b;
    font-size: 0.95rem;
}

.prescription-actions {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
}

.prescription-actions .btn {
    border-radius: 8px;
}

.prescription-summary {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 10px;
    margin-bottom: 14px;
}

.prescription-kpi {
    background: #ffffff;
    border: 1px solid #dbeafe;
    border-radius: 10px;
    padding: 12px;
}

.prescription-kpi-label {
    font-size: 0.76rem;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: #64748b;
    margin-bottom: 4px;
    font-weight: 600;
}

.prescription-kpi-value {
    color: #0f172a;
    font-size: 1rem;
    font-weight: 700;
}

.prescription-layout {
    display: grid;
    grid-template-columns: minmax(220px, 320px) 1fr;
    gap: 14px;
}

.prescription-card {
    background: #ffffff;
    border: 1px solid #e2e8f0;
    border-radius: 10px;
    padding: 14px;
}

.prescription-card-title {
    font-size: 1rem;
    font-weight: 700;
    color: #0f172a;
    margin-bottom: 10px;
}

.prescription-meta-item {
    margin-bottom: 10px;
}

.prescription-meta-item:last-child {
    margin-bottom: 0;
}

.prescription-meta-label {
    color: #64748b;
    font-size: 0.76rem;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    margin-bottom: 2px;
}

.prescription-meta-value {
    color: #1e293b;
    font-weight: 600;
}

.prescription-block {
    border: 1px solid #e2e8f0;
    border-radius: 10px;
    background: #ffffff;
    padding: 14px;
    margin-bottom: 12px;
}

.prescription-block:last-child {
    margin-bottom: 0;
}

.prescription-block-title {
    color: #0f172a;
    font-size: 1.02rem;
    font-weight: 700;
    margin-bottom: 8px;
}

.prescription-block-text {
    color: #334155;
    line-height: 1.65;
    white-space: pre-line;
}

.prescription-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 10px;
}

.prescription-chip {
    background: #f8fafc;
    border: 1px solid #e2e8f0;
    border-radius: 8px;
    padding: 10px;
}

.prescription-chip-label {
    color: #64748b;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.04em;
}

.prescription-chip-value {
    color: #0f172a;
    font-weight: 700;
    margin-top: 3px;
}

.prescription-back {
    margin-top: 14px;
}

.prescription-modal .modal-content {
    border-radius: 12px;
    border: 1px solid #e2e8f0;
}

@media (max-width: 992px) {
    .prescription-layout {
        grid-template-columns: 1fr;
    }
}
</style>

<div class="container py-4">
    <div class="prescription-page">
        <div class="prescription-top">
            <div>
                <h1 class="prescription-title"><i class="bi bi-capsule-pill me-2"></i>Prescription medicale</h1>
                <div class="prescription-subtitle">
                    Consultation {{ prescription.consultation.id }} - {{ prescription.consultation.patient.prenom }} {{ prescription.consultation.patient.nom }}
                </div>
            </div>

            <div class="prescription-actions">
                <a class="btn btn-outline-secondary" href="{{ path('prescription_pdf', {'id': prescription.idPrescription}) }}">
                    <i class="bi bi-file-earmark-pdf me-1"></i>PDF
                </a>
                <button type="button"
                        class="btn btn-outline-primary"
                        data-bs-toggle="modal"
                        data-bs-target="#prescriptionEditModal"
                        data-edit-url="{{ path('prescription_edit', {'id': prescription.idPrescription}) }}">
                    <i class="bi bi-pencil-square me-1"></i>Modifier
                </button>
                <button type="button"
                        class="btn btn-outline-danger"
                        data-bs-toggle="modal"
                        data-bs-target="#prescriptionDeleteModal"
                        data-delete-url="{{ path('prescription_delete', {'id': prescription.idPrescription}) }}"
                        data-delete-token="{{ csrf_token('delete_prescription_' ~ prescription.idPrescription) }}">
                    <i class="bi bi-trash me-1"></i>Supprimer
                </button>
            </div>
        </div>

        <div class="prescription-summary">
            <div class="prescription-kpi">
                <div class="prescription-kpi-label">Debut traitement</div>
                <div class="prescription-kpi-value">{{ prescription.dateDebut ? prescription.dateDebut|date('d/m/Y') : '-' }}</div>
            </div>
            <div class="prescription-kpi">
                <div class="prescription-kpi-label">Fin traitement</div>
                <div class="prescription-kpi-value">{{ prescription.dateFin ? prescription.dateFin|date('d/m/Y') : '-' }}</div>
            </div>
            <div class="prescription-kpi">
                <div class="prescription-kpi-label">Consultation</div>
                <div class="prescription-kpi-value">#{{ prescription.consultation.id }}</div>
            </div>
        </div>

        <div class="prescription-layout">
            <aside class="prescription-card">
                <div class="prescription-card-title">Informations</div>

                <div class="prescription-meta-item">
                    <div class="prescription-meta-label">Patient</div>
                    <div class="prescription-meta-value">{{ prescription.consultation.patient.prenom }} {{ prescription.consultation.patient.nom }}</div>
                </div>

                <div class="prescription-meta-item">
                    <div class="prescription-meta-label">Frequence</div>
                    <div class="prescription-meta-value">{{ prescription.frequence }}</div>
                </div>

                <div class="prescription-meta-item">
                    <div class="prescription-meta-label">Dosage</div>
                    <div class="prescription-meta-value">{{ prescription.dosage }}</div>
                </div>

                <div class="prescription-meta-item">
                    <div class="prescription-meta-label">Duree traitement</div>
                    <div class="prescription-meta-value">{{ prescription.dureeTraitement }}</div>
                </div>
            </aside>

            <section>
                <div class="prescription-block">
                    <div class="prescription-block-title"><i class="bi bi-capsule me-1"></i>Medicaments</div>
                    <div class="prescription-block-text">{{ prescription.medicaments }}</div>
                </div>

                <div class="prescription-block">
                    <div class="prescription-block-title"><i class="bi bi-journal-text me-1"></i>Consignes</div>
                    <div class="prescription-block-text">{{ prescription.consignes ?: '-' }}</div>
                </div>

                <div class="prescription-grid">
                    <div class="prescription-chip">
                        <div class="prescription-chip-label">Frequence</div>
                        <div class="prescription-chip-value">{{ prescription.frequence }}</div>
                    </div>
                    <div class="prescription-chip">
                        <div class="prescription-chip-label">Dosage</div>
                        <div class="prescription-chip-value">{{ prescription.dosage }}</div>
                    </div>
                    <div class="prescription-chip">
                        <div class="prescription-chip-label">Duree</div>
                        <div class="prescription-chip-value">{{ prescription.dureeTraitement }}</div>
                    </div>
                    <div class="prescription-chip">
                        <div class="prescription-chip-label">Periode</div>
                        <div class="prescription-chip-value">
                            {{ prescription.dateDebut ? prescription.dateDebut|date('d/m/Y') : '-' }} - {{ prescription.dateFin ? prescription.dateFin|date('d/m/Y') : '-' }}
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <div class="prescription-back">
            <a class="btn btn-light" href="{{ path('consultation_index') }}"><i class="bi bi-arrow-left me-1"></i>Retour</a>
        </div>
    </div>
</div>

<div class="modal fade prescription-modal" id="prescriptionEditModal" tabindex="-1" aria-labelledby="prescriptionEditModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="prescriptionEditModalLabel">Modifier prescription</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <div class="modal-body">
                <div class="text-muted small">Chargement...</div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade prescription-modal" id="prescriptionDeleteModal" tabindex="-1" aria-labelledby="prescriptionDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="prescriptionDeleteModalLabel">Confirmer la suppression</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <div class="modal-body">
                <div class="mb-2">Voulez-vous vraiment supprimer cette prescription ?</div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Annuler</button>
                <form method="post" action="">
                    <input type="hidden" name="_token" value="">
                    <button type="submit" class="btn btn-danger">Supprimer</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const editModal = document.getElementById('prescriptionEditModal');
    const deleteModal = document.getElementById('prescriptionDeleteModal');
    if (!editModal || !deleteModal) return;

    const loadFormIntoModal = async (modal, url) => {
        const modalBody = modal.querySelector('.modal-body');
        if (!modalBody) return;
        modalBody.innerHTML = '<div class="text-muted small">Chargement...</div>';
        try {
            const response = await fetch(url, {
                headers: { 'X-Requested-With': 'XMLHttpRequest' }
            });
            if (!response.ok) {
                throw new Error('Erreur de chargement');
            }
            modalBody.innerHTML = await response.text();
        } catch (e) {
            modalBody.innerHTML = '<div class="alert alert-danger mb-0">Impossible de charger le formulaire.</div>';
        }
    };

    editModal.addEventListener('show.bs.modal', async (event) => {
        const trigger = event.relatedTarget;
        if (!trigger) return;
        const editUrl = trigger.getAttribute('data-edit-url');
        if (!editUrl) return;
        await loadFormIntoModal(editModal, editUrl);
    });

    deleteModal.addEventListener('show.bs.modal', (event) => {
        const trigger = event.relatedTarget;
        if (!trigger) return;
        const deleteUrl = trigger.getAttribute('data-delete-url');
        const deleteToken = trigger.getAttribute('data-delete-token');
        const form = deleteModal.querySelector('form');
        const tokenInput = deleteModal.querySelector('input[name="_token"]');
        if (form && deleteUrl) {
            form.setAttribute('action', deleteUrl);
        }
        if (tokenInput && deleteToken) {
            tokenInput.value = deleteToken;
        }
    });
});
</script>
{% endblock %}
