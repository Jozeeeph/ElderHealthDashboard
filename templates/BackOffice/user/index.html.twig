{% extends 'base.html.twig' %}

{% block title %}Admin - Utilisateurs{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# CSS custom de cette page #}
    <link rel="stylesheet" href="{{ asset('css/admin-users.css') }}">
{% endblock %}

{% block body %}
<div class="container-fluid admin-users-page py-4">

    <div class="admin-page-header mb-4">
        <div>
            <h1 class="admin-title mb-1">Gestion des utilisateurs</h1>
            <div class="admin-subtitle">Validation, consultation et gestion des comptes</div>
        </div>

        <div class="admin-actions">
            <span class="pill-info">
                <i class="bi bi-people"></i>
                Total : {{ allUsers|length }}
            </span>
            <span class="pill-warn">
                <i class="bi bi-hourglass-split"></i>
                En attente : {{ pendingUsers|length }}
            </span>
        </div>
    </div>

    {# ====== DEMANDES EN ATTENTE ====== #}
    <div class="card admin-card mb-4">
        <div class="card-header admin-card-header">
            <div class="d-flex align-items-center gap-2">
                <i class="bi bi-inbox"></i>
                <span>Demandes en attente</span>
            </div>
        </div>

        <div class="card-body">
            {% if pendingUsers is empty %}
                <div class="alert alert-info mb-0">Aucune demande en attente.</div>
            {% else %}
                <div class="table-responsive">
                    <table class="table admin-table align-middle mb-0">
                        <thead>
                            <tr>
                                <th>Email</th>
                                <th>Nom / Prénom</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for u in pendingUsers %}
                                <tr>
                                    <td>
                                        <span class="mono">{{ u.email }}</span>
                                    </td>
                                    <td>
                                        <span class="fw-semibold">{{ u.nom }} {{ u.prenom }}</span>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group gap-2">
                                            <form method="post" action="{{ path('admin_users_approve', {id: u.id}) }}">
                                                <button class="btn btn-success btn-sm btn-pill">
                                                    <i class="bi bi-check2-circle"></i> Accepter
                                                </button>
                                            </form>

                                            <form method="post" action="{{ path('admin_users_refuse', {id: u.id}) }}">
                                                <button class="btn btn-danger btn-sm btn-pill">
                                                    <i class="bi bi-x-circle"></i> Refuser
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>

    {# ====== TOUS LES UTILISATEURS ====== #}
    <div class="card admin-card">
        <div class="card-header admin-card-header">
            <div class="d-flex align-items-center gap-2">
                <i class="bi bi-list-check"></i>
                <span>Tous les utilisateurs</span>
            </div>
        </div>

        <div class="card-body">
            {% if allUsers is empty %}
                <div class="alert alert-warning mb-0">Aucun utilisateur.</div>
            {% else %}
                <div class="table-responsive">
                    <table class="table admin-table align-middle mb-0">
                        <thead>
                            <tr>
                                <th>Email</th>
                                <th>Statut</th>
                                <th>Activation</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>

                        <tbody>
                            {% for u in allUsers %}
                                <tr>
                                    <td>
                                        <span class="mono">{{ u.email }}</span>
                                    </td>

                                    <td>
                                        <span class="badge badge-soft">
                                            {{ u.accountStatus }}
                                        </span>
                                    </td>

                                    <td>
                                        {% if u.isActive %}
                                            <span class="badge badge-active">Actif</span>
                                        {% else %}
                                            <span class="badge badge-inactive">Désactivé</span>
                                        {% endif %}
                                    </td>

                                    <td class="text-end">
                                        <div class="d-flex justify-content-end flex-wrap gap-2">
                                            <a href="{{ path('admin_users_show', {id: u.id}) }}" class="btn btn-primary btn-sm btn-pill">
                                                <i class="bi bi-eye"></i> Voir
                                            </a>

                                            <a href="{{ path('admin_users_edit', {id: u.id}) }}" class="btn btn-secondary btn-sm btn-pill">
                                                <i class="bi bi-pencil-square"></i> Modifier
                                            </a>

                                            <form method="post" action="{{ path('admin_users_toggle_active', {id: u.id}) }}">
                                                <button class="btn btn-warning btn-sm btn-pill">
                                                    <i class="bi bi-toggle2-on"></i> Activer/Désactiver
                                                </button>
                                            </form>

                                            <form method="post" action="{{ path('admin_users_delete', {id: u.id}) }}"
                                                  onsubmit="return confirm('Confirmer la suppression ?');">
                                                <button class="btn btn-danger btn-sm btn-pill">
                                                    <i class="bi bi-trash"></i> Supprimer
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>

</div>
{% endblock %}
