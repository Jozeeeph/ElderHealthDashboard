<style>
.consultation-form-wrapper {
    background: #f8fafb;
    border: 1px solid #e6edf0;
    border-radius: 18px 28px 18px 28px;
    padding: 18px;
}

.consultation-form-title {
    font-weight: 700;
    color: #1e2a2f;
    margin-bottom: 2px;
}

.consultation-form-subtitle {
    color: #6c7a80;
    font-size: 0.9rem;
    margin-bottom: 14px;
}

.consultation-form .form-label {
    font-size: 0.78rem;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: #6c7a80;
    margin-bottom: 6px;
}

.consultation-form .form-control,
.consultation-form .form-select {
    border-radius: 14px;
    border: 1px solid #dbe6ea;
    padding: 10px 12px;
    background: #ffffff;
}

.consultation-form .form-control:focus,
.consultation-form .form-select:focus {
    border-color: #7ec3d6;
    box-shadow: 0 0 0 0.2rem rgba(14, 138, 167, 0.18);
}

.consultation-form-actions {
    display: flex;
    gap: 10px;
    justify-content: center;
    margin-top: 10px;
}

.consultation-form-actions .btn-success {
    background: linear-gradient(135deg, #0e8aa7 0%, #2bbf9f 100%);
    border: none;
    box-shadow: 0 8px 18px rgba(14, 138, 167, 0.25);
}

.consultation-form .invalid-feedback ul,
.consultation-form .form-error ul,
.consultation-form .form-errors ul {
    list-style: none;
    padding-left: 0;
    margin: 0;
}

.consultation-form .invalid-feedback li::marker,
.consultation-form .form-error li::marker,
.consultation-form .form-errors li::marker {
    content: "";
}
</style>

