                {{ form_row(form.personnelMedical, { label: 'üë®‚Äç‚öïÔ∏è Personnel medical' }) }}
            </div>
            <div class="col-12">
                {{ form_row(form.typeConsultation, { label: 'ü©∫ Type de consultation' }) }}
            </div>
            <div class="col-12 col-md-6">
                {{ form_row(form.dateConsultation, { label: 'üìÖ Date de consultation' }) }}
            </div>
            <div class="col-12 col-md-6">
                {{ form_row(form.heureConsultation, { label: '‚è∞ Heure de consultation' }) }}
            </div>
