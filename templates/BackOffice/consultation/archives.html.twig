{% extends 'base.html.twig' %}

{% block title %}Archives des Consultations{% endblock %}

{% block body %}
{% set consultation_index_route = consultation_index_route|default('consultation_index') %}
{% set consultation_archives_route = consultation_archives_route|default('consultation_archives') %}
<style>
.archive-page {
    --ink: #0f172a;
    --muted: #64748b;
    --card: #ffffff;
    background: #f8fafc;
    border-radius: 14px;
    padding: 14px;
}

.archive-header {
    background: #ffffff;
    border-radius: 12px;
    padding: 14px 16px;
    border: 1px solid #e2e8f0;
    box-shadow: 0 2px 8px rgba(15, 23, 42, 0.06);
}

.archive-title {
    color: var(--ink);
    letter-spacing: 0.2px;
}

.archive-subtitle {
    color: var(--muted);
    font-size: 0.9rem;
}

.archive-card {
    border: 1px solid #e2e8f0;
    border-radius: 12px;
    background: var(--card);
    overflow: hidden;
}

.archive-accent {
    height: 4px;
    border-radius: 12px 12px 0 0;
    margin: -1px -1px 10px -1px;
    background: #86efac;
}

.archive-form .form-label {
    font-size: 0.78rem;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: #6c7a80;
    margin-bottom: 6px;
}

.archive-form .form-control {
    border-radius: 8px;
    border: 1px solid #dbe6ea;
    padding: 10px 12px;
    background: #ffffff;
}

.archive-form .form-control:focus {
    border-color: #93c5fd;
    box-shadow: 0 0 0 0.2rem rgba(59, 130, 246, 0.15);
}

.archive-actions .btn {
    border-radius: 8px;
}
</style>

<div class="archive-page">
    <div class="archive-header d-flex align-items-center justify-content-between mb-3">
        <div>
            <h1 class="archive-title mb-1">
                <i class="bi bi-archive me-2"></i>Archives des Consultations
            </h1>
            <div class="archive-subtitle">
                Consultations terminées depuis au moins 4 jours (avant le {{ limit_date|date('d/m/Y') }})
            </div>
        </div>
        <a class="btn btn-outline-primary" href="{{ path(consultation_index_route) }}">
            <i class="bi bi-arrow-left"></i>
            Retour
        </a>
    </div>

    <div class="archive-card p-3 mb-3">
        <form class="archive-form" method="get" action="{{ path(consultation_archives_route) }}">
            <div class="row g-3">
                <div class="col-12 col-md-4">
                    <label class="form-label" for="filter-patient">Patient</label>
                    <input id="filter-patient" name="patient" class="form-control" type="text"
                           value="{{ filters.patient ?? '' }}" placeholder="Nom ou prénom du patient">
                </div>
                <div class="col-12 col-md-4">
                    <label class="form-label" for="filter-personnel">Personnel médical</label>
                    <input id="filter-personnel" name="personnel" class="form-control" type="text"
                           value="{{ filters.personnel ?? '' }}" placeholder="Nom ou prénom du personnel">
                </div>
                <div class="col-12 col-md-3">
                    <label class="form-label" for="filter-date">Date consultation</label>
                    <input id="filter-date" name="date" class="form-control" type="date"
                           value="{{ filters.date ?? '' }}">
                </div>
                <div class="col-12 col-md-2 d-flex align-items-end archive-actions gap-2">
                    <button class="btn btn-outline-primary flex-fill" type="submit">
                        <i class="bi bi-funnel"></i>
                        Filtrer
                    </button>
                    <a class="btn btn-outline-secondary flex-fill" href="{{ path(consultation_archives_route) }}">
                        Retour
                    </a>
                </div>
            </div>
        </form>
    </div>

    <div class="row g-3">
        {% for consultation in consultations %}
            <div class="col-12 col-md-6 col-xl-4">
                <div class="archive-card h-100 p-3">
                    <div class="archive-accent"></div>
                    <div class="fw-semibold text-dark mb-2">
                        {{ consultation.patient.prenom }} {{ consultation.patient.nom }}
                    </div>
                    <div class="text-muted small mb-2">
                        {{ consultation.dateConsultation ? consultation.dateConsultation|date('d/m/Y') : '-' }}
                        •
                        {{ consultation.heureConsultation ? consultation.heureConsultation|date('H:i') : '-' }}
                    </div>
                    <div class="text-muted small">
                        Personnel: {{ consultation.personnelMedical.prenom }} {{ consultation.personnelMedical.nom }}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info mb-0">Aucune consultation archivée pour ces filtres.</div>
            </div>
        {% endfor %}
    </div>

    {% if pagination.pages > 1 %}
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2 mt-4">
            <div class="text-muted small">
                Page {{ pagination.page }} / {{ pagination.pages }} - {{ pagination.total }} consultation(s)
            </div>
            <nav aria-label="Pagination archives consultations">
                <ul class="pagination mb-0">
                    <li class="page-item {{ pagination.page <= 1 ? 'disabled' : '' }}">
                        <a class="page-link" href="{{ path(consultation_archives_route, {
                            patient: filters.patient ?? '',
                            personnel: filters.personnel ?? '',
                            date: filters.date ?? '',
                            page: pagination.page - 1
                        }) }}">Precedent</a>
                    </li>
                    {% for p in 1..pagination.pages %}
                        <li class="page-item {{ p == pagination.page ? 'active' : '' }}">
                            <a class="page-link" href="{{ path(consultation_archives_route, {
                                patient: filters.patient ?? '',
                                personnel: filters.personnel ?? '',
                                date: filters.date ?? '',
                                page: p
                            }) }}">{{ p }}</a>
                        </li>
                    {% endfor %}
                    <li class="page-item {{ pagination.page >= pagination.pages ? 'disabled' : '' }}">
                        <a class="page-link" href="{{ path(consultation_archives_route, {
                            patient: filters.patient ?? '',
                            personnel: filters.personnel ?? '',
                            date: filters.date ?? '',
                            page: pagination.page + 1
                        }) }}">Suivant</a>
                    </li>
                </ul>
            </nav>
        </div>
    {% endif %}
</div>
{% endblock %}
