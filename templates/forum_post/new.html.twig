{% extends 'base.html.twig' %}
{% block title %}New Post{% endblock %}

{% block body %}
<style>
  :root{
    /* Couleurs proches de ton logo */
    --brand-blue: #0d6efd;
    --brand-orange: #f5a623;
    --text: #1f2937;
    --muted: #6b7280;
    --card: #ffffff;
    --border: #e5e7eb;
    --bg: #f7f9fc;
  }

  .page-wrap{
    min-height: calc(100vh - 80px);
    background:
      radial-gradient(900px 450px at 20% 0%, rgba(13,110,253,.14), transparent 55%),
      radial-gradient(700px 350px at 90% 10%, rgba(245,166,35,.14), transparent 55%),
      var(--bg);
    padding: 48px 12px;
  }

  .form-card{
    max-width: 920px;
    margin: 0 auto;
    background: var(--card);
    border: 1px solid rgba(229,231,235,.85);
    border-radius: 26px;
    box-shadow: 0 18px 40px rgba(15,23,42,.10);
    overflow: hidden;
  }

  .form-card__header{
    padding: 22px 26px;
    background: linear-gradient(135deg, rgba(13,110,253,.12), rgba(245,166,35,.12));
    border-bottom: 1px solid rgba(229,231,235,.85);
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
  }

  .brand{
    display: flex;
    align-items: center;
    gap: 12px;
    min-width: 0;
  }

  .brand__logo{
    width: 44px;
    height: 44px;
    border-radius: 14px;
    background: #fff;
    border: 1px solid rgba(229,231,235,.9);
    display: grid;
    place-items: center;
    overflow: hidden;
  }
  .brand__logo img{
    width: 100%;
    height: 100%;
    object-fit: contain;
    padding: 6px;
  }

  .brand__title{
    margin: 0;
    font-size: 1.05rem;
    font-weight: 800;
    color: var(--text);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .brand__subtitle{
    margin: 0;
    font-size: .9rem;
    color: var(--muted);
  }

  .pill{
    font-size: .85rem;
    border-radius: 999px;
    padding: 6px 10px;
    border: 1px solid rgba(229,231,235,.9);
    background: #fff;
    color: var(--muted);
    display: inline-flex;
    gap: 8px;
    align-items: center;
  }
  .dot{
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--brand-blue);
    box-shadow: 0 0 0 4px rgba(13,110,253,.10);
  }

  .form-card__body{
    padding: 28px 26px 30px;
  }

  /* Symfony form */
  .ehc-form .form-label{
    font-weight: 700;
    color: var(--text);
    margin-bottom: 8px;
  }

  .ehc-form .form-control,
  .ehc-form .form-select,
  .ehc-form textarea{
    border-radius: 999px;            /* like screenshot */
    border: 1px solid var(--border);
    padding: 14px 16px;
    background: #fff;
    transition: .15s ease;
  }

  /* textarea -> arrondi mais pas 999px sinon bizarre */
  .ehc-form textarea{
    border-radius: 18px;
    min-height: 140px;
    resize: vertical;
  }

  .ehc-form .form-control:focus,
  .ehc-form .form-select:focus,
  .ehc-form textarea:focus{
    border-color: rgba(13,110,253,.55);
    box-shadow: 0 0 0 .25rem rgba(13,110,253,.15);
    outline: 0;
  }

  .actions{
    display: flex;
    gap: 10px;
    justify-content: flex-end;
    flex-wrap: wrap;
    margin-top: 18px;
  }

  .btn-primary-ehc{
    border: 0;
    border-radius: 999px;
    padding: 14px 22px;
    font-weight: 800;
    color: #fff;
    background: linear-gradient(90deg, var(--brand-blue), rgba(13,110,253,.80));
    box-shadow: 0 14px 28px rgba(13,110,253,.18);
  }
  .btn-primary-ehc:hover{
    filter: brightness(.97);
  }

  .btn-ghost{
    border-radius: 999px;
    padding: 14px 18px;
    border: 1px solid var(--border);
    background: #fff;
    font-weight: 700;
    color: var(--text);
    text-decoration: none;
  }
  .btn-ghost:hover{
    background: rgba(15,23,42,.03);
  }

  .hint{
    margin-top: 14px;
    color: var(--muted);
    font-size: .92rem;
  }

  /* Rendu mieux sur petit Ã©cran */
  @media (max-width: 576px){
    .form-card__body{ padding: 22px 16px 24px; }
    .form-card__header{ padding: 18px 16px; }
  }
</style>

<div class="page-wrap">
  <div class="form-card">
    <div class="form-card__header">
      <div class="brand">
        <div>
          <p class="brand__title">Elder<span style="color:var(--brand-orange)">Health</span><span style="color:var(--brand-orange)">Care</span></p>
          <p class="brand__subtitle">Forum â€¢ Create a new post</p>
        </div>
      </div>

      <span class="pill"><span class="dot"></span> New Post</span>
    </div>

    <div class="form-card__body">
      {{ form_start(form, { attr: { class: 'ehc-form' } }) }}

        {# Affiche les erreurs globales si besoin #}
        {{ form_errors(form) }}

        {{ form_widget(form) }}

        <div class="actions">
          <a class="btn-ghost" href="{{ path('forum_post_index') }}">Cancel</a>
          <button class="btn-primary-ehc" type="submit">Save Post</button>
        </div>

        <div class="hint">
          Astuce : un titre court + contenu clair = plus de rÃ©ponses ðŸ˜Š
        </div>

      {{ form_end(form) }}
    </div>
  </div>
</div>
{% endblock %}
