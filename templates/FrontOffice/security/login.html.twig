{% extends 'FrontOffice/base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<style>
  :root {
    --blue: #1e6fb9;
    --blue-soft: #e8f2ff;
    --ice: #f7fbff;
    --ink: #1f2a37;
    --muted: #6b7280;
  }

  .login-page {
    min-height: 90vh;
    background: linear-gradient(180deg, #f8fbff 0%, #eef5ff 100%);
    display: grid;
    place-items: center;
  }

  .login-card {
    border: 0;
    border-radius: 22px;
    box-shadow: 0 18px 50px rgba(30, 41, 59, 0.12);
    overflow: hidden;
    background: #fff;
  }

  .login-aside {
    background: linear-gradient(135deg, #2a7fd1, #5aa9e6);
    color: #fff;
  }

  .login-aside h1 {
    font-size: 2rem;
    font-weight: 800;
  }

  .login-badge {
    background: rgba(255, 255, 255, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 999px;
    padding: 6px 12px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .login-form .form-label {
    font-size: 0.78rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--muted);
    font-weight: 700;
  }

  .login-form .form-control {
    border-radius: 12px;
    padding: 12px 14px;
    border: 1px solid #d7e7fb;
    background: var(--ice);
  }

  .login-form .form-control:focus {
    border-color: var(--blue);
    box-shadow: 0 0 0 0.2rem rgba(30, 111, 185, 0.2);
  }

  .login-btn {
    background: linear-gradient(135deg, #1e6fb9, #2a7fd1);
    border: none;
    border-radius: 12px;
    padding: 12px;
    font-weight: 700;
    color: #fff;
  }
</style>

<div class="login-page">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10">
        <div class="card login-card">
          <div class="row g-0">
            <div class="col-lg-6 login-aside p-5 d-flex flex-column justify-content-center">
              <div class="login-badge mb-3">Elder HealthCare</div>
              <h1>Bienvenue</h1>
              <p class="mb-0">Accès sécurisé </p>
            </div>
            <div class="col-lg-6 p-5">
              <h2 class="h4 fw-bold mb-3" style="color: var(--ink);">Connexion</h2>

              {% if error %}
                <div class="alert alert-danger">
                  {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
              {% endif %}

              <form method="post" action="{{ path('app_login') }}" class="login-form">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="mb-3">
                  <label class="form-label">Adresse Email</label>
                  <input
                    type="email"
                    name="_username"
                    class="form-control"
                    value="{{ last_username }}"
                    required
                    autofocus
                  >
                </div>

                <div class="mb-3">
                  <label class="form-label">Mot de passe</label>
                  <input
                    type="password"
                    name="_password"
                    class="form-control"
                    required
                  >
                </div>

                <button class="login-btn w-100">
                  Se connecter
                </button>

                <div class="mt-3 d-flex justify-content-between">
                  <a href="{{ path('app_register') }}" class="text-decoration-none" style="color: var(--blue);">Créer un compte</a>
                  <a href="{{ path('app_forgot_password_request') }}" class="text-decoration-none" style="color: var(--blue);">Mot de passe oublié ?</a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
