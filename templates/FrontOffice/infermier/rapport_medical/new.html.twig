{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/infermier.css') }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}
{% block body %}
    <div class="nurse-app">
        {% include 'FrontOffice/infermier/_header.html.twig' %}

        <main class="nurse-main">
            <section class="card">
                <div class="card-head">
                    <h2>Nouveau rapport medical</h2>
                    <a class="btn-outline" href="{{ path('front_infermier_consultation_index') }}">Retour</a>
                </div>
                <p class="muted">Consultation {{ consultation.id }}</p>
                {% if severity is defined %}
                    <div class="alert alert-info mt-2 mb-0">
                        Gravite clinique calculee: <strong>{{ severity.levelLabel }}</strong>
                        (score {{ severity.score }}/100).
                        Niveau du rapport pre-rempli: <strong>{{ severity_prefill_level|default('faible')|capitalize }}</strong>.
                        Vous pouvez le modifier avant validation.
                    </div>
                {% endif %}
            </section>

            {{ include('FrontOffice/infermier/rapport_medical/_form.html.twig', {
                form: form,
                submit_label: 'Ajouter',
                severity: severity|default(null),
                severity_prefill_level: severity_prefill_level|default(null)
            }) }}
        </main>
    </div>
{% endblock %}
