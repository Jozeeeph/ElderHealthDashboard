{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/infermier.css') }}">
{% endblock %}
    <style>
        .rx-page {
            background: #f7fbff;
            border: 1px solid #e3edf5;
            border-radius: 16px;
            padding: 16px;
        }

        .rx-hero {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 12px;
            padding: 14px 16px;
            border: 1px solid #e3edf5;
            border-radius: 12px;
            background: #ffffff;
        }

        .rx-hero h2 { margin: 0; font-size: 1.25rem; font-weight: 800; color: #12303b; }
        .rx-hero .meta { margin-top: 4px; color: #5b6b74; font-weight: 600; }

        .rx-card {
            margin-top: 14px;
            background: #ffffff;
            border: 1px solid #e3edf5;
            border-radius: 12px;
            padding: 14px;
        }

        .rx-grid {
            margin-top: 14px;
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 14px;
        }

        .rx-chip {
            display: inline-flex;
            align-items: center;
            padding: 6px 10px;
            border-radius: 999px;
            background: #f1f5f9;
            border: 1px solid #dce6f0;
            color: #1f3b4a;
            font-size: .85rem;
            font-weight: 700;
            margin: 6px 6px 0 0;
        }

        .rx-side {
            background: linear-gradient(160deg, #0ea5a4 0%, #22c55e 100%);
            color: #fff;
            border-radius: 12px;
            padding: 16px;
            min-width: 260px;
        }

        .rx-side .chip {
            display: inline-flex;
            margin-top: 10px;
            padding: 6px 10px;
            border-radius: 999px;
            background: rgba(255,255,255,.2);
            border: 1px solid rgba(255,255,255,.35);
            font-weight: 700;
        }

        .rx-form { flex: 1 1 auto; }

        .rx-actions { display: flex; gap: 8px; flex-wrap: wrap; }

        .rx-section {
            margin-top: 14px;
            display: grid;
            gap: 10px;
        }

        .rx-panel {
            background: #ffffff;
            border: 1px solid #e3edf5;
            border-radius: 12px;
            padding: 14px;
        }

        @media (max-width: 980px) {
            .rx-grid { grid-template-columns: 1fr; }
            .rx-card { display: block !important; }
            .rx-side { min-width: 0; margin-bottom: 12px; }
        }
    </style>{% block body %}
    <div class="nurse-app">
        {% include 'FrontOffice/infermier/_header.html.twig' %}

        <main class="nurse-main rx-page">
            <section class="rx-hero">
                <div>
                    <h2>Nouvelle prescription</h2>
                    <div class="meta">Consultation {{ consultation.id }}</div>
                </div>
                <a class="btn-outline" href="{{ path('front_infermier_consultation_index') }}">Retour</a>
            </section>

            <section class="rx-card">
                <aside class="rx-side">
                    <div>
                        <h3>Plan de traitement</h3>
                        <p>Renseignez les informations utiles pour un suivi clair et securise du patient.</p>
                        <span class="chip">Suivi patient</span>
                    </div>
                    <div>
                        <p>Dosage precise</p>
                        <p>Duree de traitement</p>
                        <p>Consignes claires</p>
                    </div>
                </aside>
                <div class="rx-form">
                    {{ include('FrontOffice/infermier/prescription/_form.html.twig', { form: form, submit_label: 'Ajouter' }) }}
                </div>
            </section>
        </main>
    </div>
{% endblock %}