{% block stylesheets %}
    <link
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

	<link rel="stylesheet" href="{{ asset('css/infermier.css') }}">
{% endblock %}
{% block body %}
	<div class="nurse-app">
		<style>
			.rx-page{
				background:
					radial-gradient(circle at 12% 12%, rgba(46, 186, 198, 0.18), transparent 40%),
					radial-gradient(circle at 88% 20%, rgba(22, 163, 74, 0.14), transparent 42%),
					linear-gradient(180deg, #f7fbff 0%, #f2fbf7 55%, #ffffff 100%);
				border-radius: 22px;
				padding: 18px;
			}
			.rx-hero{
				display:flex;
				align-items:center;
				justify-content:space-between;
				gap:16px;
				padding:18px 20px;
				border-radius:18px 26px 18px 26px;
				background: linear-gradient(135deg, #e8f7ff 0%, #eafff3 60%, #ffffff 100%);
				border:1px solid #e3f0f5;
				box-shadow:0 12px 26px rgba(15, 23, 42, 0.08);
			}
			.rx-hero h2{
				margin:0;
				font-size:1.4rem;
				font-weight:800;
				color:#15323a;
			}
			.rx-hero .meta{
				margin-top:6px;
				font-weight:700;
				color:#5b6b74;
			}
			.rx-card{
				margin-top:16px;
				display:flex;
				gap:18px;
				align-items:stretch;
				background:#ffffff;
				border:1px solid #e6edf0;
				border-radius:22px 30px 22px 30px;
				box-shadow:0 18px 40px rgba(15,23,42,.1);
				overflow:hidden;
			}
			.rx-side{
				flex:0 0 280px;
				padding:22px;
				background:
					linear-gradient(160deg, #0ea5a4 0%, #22c55e 100%);
				color:#fff;
				display:flex;
				flex-direction:column;
				justify-content:space-between;
			}
			.rx-side h3{
				margin:0 0 10px;
				font-weight:800;
				font-size:1.15rem;
			}
			.rx-side p{
				margin:0;
				opacity:.95;
				font-weight:600;
			}
			.rx-side .chip{
				margin-top:16px;
				display:inline-flex;
				align-items:center;
				gap:8px;
				padding:8px 12px;
				border-radius:999px;
				background:rgba(255,255,255,.18);
				border:1px solid rgba(255,255,255,.35);
				font-weight:800;
				font-size:.85rem;
			}
			.rx-form{
				flex:1 1 auto;
				padding:22px 24px;
			}
			.rx-form .form-card{
				box-shadow:none;
				border:none;
				background:transparent;
				padding:0;
			}
			.rx-form .form-title{
				font-weight:800;
				color:#15323a;
			}
			.rx-form .form-subtitle{
				color:#5f6b74;
				font-weight:700;
			}
			@media (max-width: 980px){
				.rx-card{
					flex-direction:column;
				}
				.rx-side{
					flex:1 1 auto;
				}
			}
		</style>
		{% include 'FrontOffice/infermier/_header.html.twig' %}

		<main class="nurse-main rx-page">
			{% for message in app.flashes('warning') %}
				<div class="alert alert-warning alert-dismissible fade show" role="alert">
					{{ message }}
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
				</div>
			{% endfor %}
			{% for message in app.flashes('success') %}
				<div class="alert alert-success alert-dismissible fade show" role="alert">
					{{ message }}
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
				</div>
			{% endfor %}

			<section class="rx-hero">
				<div>
					<h2>Nouvelle prescription</h2>
					<div class="meta">Consultation {{ consultation.id }}</div>
				</div>
				<a class="btn-outline" href="{{ path('front_infermier_consultation_index') }}">Retour</a>
			</section>

			<section class="rx-card">
				<aside class="rx-side">
					<div>
						<h3>Plan de traitement</h3>
						<p>Renseignez les informations medicales essentielles pour une prise en charge claire et securisee.</p>
						<span class="chip">Suivi patient</span>
					</div>
					<div>
						<p>Posologie precise</p>
						<p>Periode de traitement</p>
						<p>Consignes utiles</p>
					</div>
				</aside>
				<div class="rx-form">
					{{ include('FrontOffice/infermier/prescription/_form.html.twig', { form: form, submit_label: 'Ajouter' }) }}
				</div>
			</section>
		</main>
	</div>
{% endblock %}
