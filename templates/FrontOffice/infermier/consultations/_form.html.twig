<style>
.consultation-form-wrapper {
    background: #f8fafb;
    border: 1px solid #e6edf0;
    border-radius: 16px;
    padding: 18px;
}

.consultation-form-title {
    font-weight: 700;
    color: #1e2a2f;
    margin-bottom: 2px;
}

.consultation-form-subtitle {
    color: #6c7a80;
    font-size: 0.9rem;
    margin-bottom: 14px;
}

.consultation-form .form-label {
    font-size: 0.78rem;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: #6c7a80;
    margin-bottom: 6px;
}

.consultation-form .form-control,
.consultation-form .form-select {
    border-radius: 14px;
    border: 1px solid #dbe6ea;
    padding: 10px 12px;
    background: #ffffff;
}

.consultation-form .form-control:focus,
.consultation-form .form-select:focus {
    border-color: #93c5fd;
    box-shadow: 0 0 0 0.2rem rgba(37, 99, 235, 0.18);
}

.consultation-form-actions {
    display: flex;
    gap: 10px;
    justify-content: flex-end;
    margin-top: 10px;
}

.consultation-form-actions .btn {
    border-radius: 999px;
    font-weight: 700;
    padding: .45rem .95rem;
    background: #0d6efd;
    border: 1px solid #0d6efd;
    color: #fff;
}

.consultation-form-actions .btn:hover {
    background: #0b5ed7;
    border-color: #0b5ed7;
    color: #fff;
}
</style>

{% form_theme form 'bootstrap_5_layout.html.twig' %}
<div class="consultation-form-wrapper">
    <div class="consultation-form-title">Details de la consultation</div>
    <div class="consultation-form-subtitle">Renseignez les informations principales</div>

    {% if form_action is defined %}
        {{ form_start(form, {'attr': {'class': 'consultation-form', 'novalidate': 'novalidate'}, 'action': form_action}) }}
    {% else %}
        {{ form_start(form, {'attr': {'class': 'consultation-form', 'novalidate': 'novalidate'}}) }}
    {% endif %}
        <div class="row g-3">
            <div class="col-12 col-md-6">
                {{ form_row(form.patient, { label: 'Patient' }) }}
            </div>
            <div class="col-12 col-md-6">
                {{ form_row(form.personnelMedical, { label: 'Personnel medical' }) }}
            </div>
            <div class="col-12">
                {{ form_row(form.typeConsultation, { label: 'Type de consultation' }) }}
            </div>
            <div class="col-12 col-md-6">
                {{ form_row(form.dateConsultation, { label: 'Date de consultation' }) }}
            </div>
            <div class="col-12 col-md-6">
                {{ form_row(form.heureConsultation, { label: 'Heure de consultation' }) }}
            </div>
            <div class="col-12">
                {{ form_row(form.lieu, { label: 'Lieu' }) }}
            </div>
        </div>

        <div class="consultation-form-actions">
            <button class="btn">{{ submit_label|default('Enregistrer') }}</button>
        </div>
    {{ form_end(form) }}
</div>