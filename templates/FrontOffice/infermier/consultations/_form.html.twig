<div class="consultation-form-wrapper">
	<div class="consultation-form-header">
		<div class="consultation-form-title">Nouvelle consultation</div>
		<div class="consultation-form-subtitle">Renseignez les informations principales</div>
	</div>

	{% if form_action is defined %}
		{{ form_start(form, {'attr': {'class': 'consultation-form'}, 'action': form_action}) }}
	{% else %}
		{{ form_start(form, {'attr': {'class': 'consultation-form'}}) }}
	{% endif %}
		<div class="consultation-form-section">
			<div class="consultation-form-section-title">Identification</div>
			<div class="consultation-form-section-subtitle">Patient et personnel medical</div>
		</div>
		<div class="row g-3">
			<div class="col-12 col-md-6">
				{{ form_row(form.patient, { label: 'Patient' }) }}
			</div>
			<div class="col-12 col-md-6">
				{{ form_row(form.personnelMedical, { label: 'Personnel medical' }) }}
			</div>
			<div class="col-12">
				{{ form_row(form.typeConsultation, { label: 'Type de consultation' }) }}
			</div>
		</div>
		<div class="consultation-form-divider"></div>
		<div class="consultation-form-section">
			<div class="consultation-form-section-title">Planification</div>
			<div class="consultation-form-section-subtitle">Date, heure et lieu</div>
		</div>
		<div class="row g-3">
			<div class="col-12 col-md-6">
				{{ form_row(form.dateConsultation, { label: 'Date de consultation' }) }}
			</div>
			<div class="col-12 col-md-6">
				{{ form_row(form.heureConsultation, { label: 'Heure de consultation' }) }}
			</div>
			<div class="col-12">
				{{ form_row(form.lieu, { label: 'Lieu' }) }}
			</div>
		</div>

		<div class="consultation-form-actions">
			<button class="btn btn-success" type="submit">{{ submit_label|default('Enregistrer') }}</button>
		</div>
	{{ form_end(form) }}
</div>
