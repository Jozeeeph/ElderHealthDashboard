{% block stylesheets %}
    <link
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('css/infermier.css') }}?v=20260214-8">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        :root {
            --health-bg: #f6fbf9;
            --health-card: #ffffff;
            --health-line: #dcebe5;
            --health-text: #153547;
            --health-muted: #668190;
            --health-blue: #1f6feb;
            --health-green: #169b76;
            --health-soft-blue: #edf4ff;
            --health-soft-green: #eef9f5;
        }

        .consultation-page {
            background: var(--health-bg);
            border: 1px solid var(--health-line);
            border-radius: 12px;
            padding: 16px;
        }

        .consultation-header {
            background: var(--health-card);
            border: 1px solid var(--health-line);
            border-radius: 10px;
            padding: 14px 16px;
        }

        .consultation-title {
            margin: 0;
            color: var(--health-text);
            font-size: 1.3rem;
            font-weight: 700;
        }

        .consultation-subtitle {
            margin: 0;
            color: var(--health-muted);
            font-size: 0.9rem;
        }

        .consultation-btn {
            border-radius: 8px;
            font-weight: 600;
            background: var(--health-blue);
            border-color: var(--health-blue);
        }

        .consultation-card {
            background: var(--health-card);
            border: 1px solid var(--health-line);
            border-radius: 10px;
            overflow: hidden;
            height: 100%;
        }

        .consultation-accent {
            height: 4px;
            border-radius: 10px 10px 0 0;
            margin: -1px -1px 10px -1px;
            background: #8da8ba;
        }

        .consultation-card[data-status='en_cours'] .consultation-accent { background: #2f88de; }
        .consultation-card[data-status='planifiee'] .consultation-accent { background: #1f6feb; }
        .consultation-card[data-status='realisee'] .consultation-accent,
        .consultation-card[data-status='terminee'] .consultation-accent { background: #169b76; }
        .consultation-card[data-status='annulee'] .consultation-accent { background: #db4f4f; }

        .consultation-label {
            color: var(--health-muted);
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.03em;
        }

        .consultation-name {
            color: var(--health-text);
            font-weight: 700;
            font-size: 1rem;
        }

        .consultation-person-name { color: #1f5381; }
        .consultation-staff-name { color: #11795f; }

        .badge-soft {
            background: var(--health-soft-blue);
            border: 1px solid #d5e5ff;
            color: #234a77;
            border-radius: 999px;
            padding: 5px 10px;
            font-weight: 600;
        }

        .consultation-meta {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
            margin-bottom: 10px;
        }

        .consultation-chip {
            display: inline-flex;
            align-items: center;
            padding: 5px 10px;
            border-radius: 999px;
            border: 1px solid #d9eee7;
            background: var(--health-soft-green);
            color: #2b6356;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .consultation-grid {
            display: grid;
            gap: 8px;
        }

        .consultation-row {
            display: grid;
            grid-template-columns: 115px 1fr;
            gap: 10px;
            align-items: center;
        }

        .consultation-row .value {
            color: var(--health-text);
            font-weight: 600;
        }

        .consultation-actions {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
            gap: 8px;
            margin-top: 12px;
        }

        .consultation-actions .btn {
            border-radius: 7px;
            font-size: 0.8rem;
            font-weight: 600;
            padding: 6px 8px;
            white-space: nowrap;
        }

        .consultation-empty-state {
            border: 1px dashed #bfded4;
            background: #f8fcfb;
            border-radius: 10px;
            min-height: 210px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: 24px 16px;
        }

        .consultation-empty-state i {
            font-size: 1.9rem;
            color: #7ea79b;
            margin-bottom: 8px;
        }

        .consultation-empty-state h5 {
            color: #1d4f69;
            margin-bottom: 6px;
            font-weight: 700;
        }

        .consultation-modal .modal-content {
            border: 1px solid var(--health-line);
            border-radius: 10px;
        }

        .consultation-modal .modal-header {
            border-bottom: 1px solid #e1ece8;
            background: #f7fbfa;
        }

        .consult-filter-card {
            background: #ffffff;
            border: 1px solid var(--health-line);
            border-radius: 10px;
            padding: 12px 14px;
            margin-bottom: 12px;
        }

        .consult-filter-label {
            color: #486776;
            font-size: 0.78rem;
            font-weight: 700;
            letter-spacing: 0.02em;
            margin-bottom: 6px;
            display: block;
        }

        .consult-filter-input {
            border: 1px solid #d4e4de;
            border-radius: 8px;
            min-height: 40px;
            background: #ffffff;
        }

        .consult-filter-input:focus {
            border-color: #90bed5;
            box-shadow: 0 0 0 0.12rem rgba(31, 111, 235, 0.15);
        }

        .consult-filter-actions {
            display: flex;
            align-items: end;
            justify-content: flex-end;
            gap: 8px;
        }

        .btn-filter {
            min-height: 40px;
            border-radius: 8px;
            padding: 0 16px;
            font-weight: 600;
        }

        .btn-filter-main {
            background: var(--health-green);
            border-color: var(--health-green);
            color: #ffffff;
        }

        .btn-filter-main:hover {
            background: #128362;
            border-color: #128362;
            color: #ffffff;
        }

        .btn-filter-reset {
            background: #f3f8f6;
            border: 1px solid #d2e3dc;
            color: #355564;
        }

        .btn-filter-reset:hover {
            background: #eaf3ef;
            border-color: #c1d9d0;
            color: #2f4b58;
        }

        /* Override global infermier.css .row grid rules for this page only */
        .consultation-page .row {
            display: flex !important;
            flex-wrap: wrap !important;
            --bs-gutter-x: 1rem;
            --bs-gutter-y: 0;
            margin-top: calc(-1 * var(--bs-gutter-y));
            margin-right: calc(-0.5 * var(--bs-gutter-x));
            margin-left: calc(-0.5 * var(--bs-gutter-x));
        }

        .consultation-page .row > * {
            flex-shrink: 0;
            width: 100%;
            max-width: 100%;
            padding-right: calc(var(--bs-gutter-x) * 0.5);
            padding-left: calc(var(--bs-gutter-x) * 0.5);
            margin-top: var(--bs-gutter-y);
        }

        .consultation-page .g-3 {
            --bs-gutter-x: 1rem;
            --bs-gutter-y: 1rem;
        }

        @media (min-width: 768px) {
            .consultation-page .col-md-4 { flex: 0 0 auto; width: 33.333333%; }
            .consultation-page .col-md-5 { flex: 0 0 auto; width: 41.666667%; }
            .consultation-page .col-md-auto { flex: 0 0 auto; width: auto; }
        }

        @media (min-width: 992px) {
            .consultation-page .col-lg-6 { flex: 0 0 auto; width: 50%; }
        }


        .consult-pagination .page-link {
            color: #1f5381;
            border-color: #d3e3ec;
        }

        .consult-pagination .page-item.active .page-link {
            background: var(--health-blue);
            border-color: var(--health-blue);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="nurse-app">
        {% include 'FrontOffice/infermier/_header.html.twig' %}

        <main class="nurse-main">
            <div class="consultation-page">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                    </div>
                {% endfor %}

                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                    </div>
                {% endfor %}

                <div class="consultation-header d-flex align-items-center justify-content-between mb-3">
                    <div>
                        <h1 class="consultation-title mb-1">&#x1FA7A; Consultations infirmier</h1>
                        <div class="consultation-subtitle">Vue simple et professionnelle du suivi patient &#x1F49A;</div>
                    </div>
                    <button type="button"
                            class="btn btn-primary consultation-btn"
                            data-bs-toggle="modal"
                            data-bs-target="#consultationNewModal"
                            data-new-url="{{ path('front_infermier_consultation_new') }}">
                        <i class="bi bi-plus-circle me-1"></i>Nouvelle consultation
                    </button>
                </div>

                <div class="consult-filter-card">
                    <form method="get" action="{{ path('front_infermier_consultation_index') }}">
                        <div class="row g-3 align-items-end">
                            <div class="col-12 col-md-5">
                                <label class="consult-filter-label" for="filter-patient">Patient</label>
                                <input id="filter-patient" name="patient" class="form-control consult-filter-input" type="text"
                                       value="{{ filters.patient ?? '' }}" placeholder="Nom ou prenom du patient">
                            </div>
                            <div class="col-12 col-md-4">
                                <label class="consult-filter-label" for="filter-date">Date consultation</label>
                                <input id="filter-date" name="date" class="form-control consult-filter-input" type="date"
                                       value="{{ filters.date ?? '' }}">
                            </div>
                            <div class="col-12 col-md-auto ms-md-auto consult-filter-actions">
                                <button class="btn btn-filter btn-filter-main" type="submit">&#x1F50D; Filtrer</button>
                                <a class="btn btn-filter btn-filter-reset" href="{{ path('front_infermier_consultation_index') }}">Reset</a>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="row g-3">
                    {% for consultation in consultations %}
                        {% set status = consultation.etatConsultation ? consultation.etatConsultation|lower : '' %}
                        {% set status_key = status|replace({'�':'e','�':'e','�':'e','�':'a','�':'u'}) %}
                        {% set status_label = status_key == 'en_cours' ? 'En cours'
                            : (status_key == 'terminee' ? 'Terminee'
                            : (status_key == 'planifiee' ? 'Planifiee'
                            : (status_key == 'realisee' ? 'Realisee'
                            : (status_key == 'annulee' ? 'Annulee' : (consultation.etatConsultation ?? '-'))))) %}

                        <div class="col-12 col-md-6">
                            <div class="card consultation-card" data-status="{{ status_key }}">
                                <div class="card-body">
                                    <div class="consultation-accent"></div>
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <div class="consultation-label">Patient</div>
                                            <div class="consultation-name">
                                                <span class="consultation-person-name">{{ consultation.patient.prenom }} {{ consultation.patient.nom }}</span>
                                            </div>
                                        </div>
                                        <span class="badge badge-soft">{{ status_label }}</span>
                                    </div>

                                    <div class="consultation-meta">
                                        <span class="consultation-chip">&#x1F4C5; Date: {{ consultation.dateConsultation ? consultation.dateConsultation|date('d/m/Y') : '-' }}</span>
                                        <span class="consultation-chip">&#x1F551; Heure: {{ consultation.heureConsultation ? consultation.heureConsultation|date('H:i') : '-' }}</span>
                                        {% if consultation.lieu %}
                                            <span class="consultation-chip">&#x1F4CD; Lieu: {{ consultation.lieu }}</span>
                                        {% endif %}
                                        {% if consultation.poidsKg %}
                                            <span class="consultation-chip">&#x2696;&#xFE0F; Poids: {{ consultation.poidsKg }} kg</span>
                                        {% endif %}
                                        {% if consultation.tensionSystolique and consultation.tensionDiastolique %}
                                            <span class="consultation-chip">&#x1FA7A; TA: {{ consultation.tensionSystolique }}/{{ consultation.tensionDiastolique }} mmHg</span>
                                        {% endif %}
                                    </div>

                                    <div class="consultation-grid">
                                        <div class="consultation-row">
                                            <div class="consultation-label">Personnel medical</div>
                                            <div class="value">
                                                {% if consultation.personnelMedical %}
                                                    <span class="consultation-staff-name">{{ consultation.personnelMedical.prenom }} {{ consultation.personnelMedical.nom }}</span>
                                                {% else %}
                                                    -
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="consultation-row">
                                            <div class="consultation-label">Type</div>
                                            <div class="value">{{ consultation.typeConsultation ?: '-' }}</div>
                                        </div>
                                    </div>

                                    <div class="consultation-actions">
                                        <a class="btn btn-outline-primary btn-sm" href="{{ path('front_infermier_consultation_edit', {'id': consultation.id}) }}">Modifier</a>
                                        <a class="btn btn-outline-info btn-sm" href="{{ path('front_infermier_consultation_pre_bilan', {'patientId': consultation.patient.id}) }}">Pre-bilan IA</a>

                                        {% if consultation.rapportMedical %}
                                            <a class="btn btn-outline-primary btn-sm" href="{{ path('front_infermier_rapport_show', {'id': consultation.rapportMedical.idRapport}) }}">Rapport</a>
                                            <a class="btn btn-outline-secondary btn-sm" href="{{ path('front_infermier_rapport_pdf', {'id': consultation.rapportMedical.idRapport}) }}">PDF rapport</a>
                                        {% else %}
                                            <a class="btn btn-success btn-sm" href="{{ path('front_infermier_rapport_new', {'id': consultation.id}) }}">Ajouter rapport</a>
                                        {% endif %}

                                        {% if consultation.prescription %}
                                            <a class="btn btn-outline-primary btn-sm" href="{{ path('front_infermier_prescription_show', {'id': consultation.prescription.idPrescription}) }}">Prescription</a>
                                            <a class="btn btn-outline-secondary btn-sm" href="{{ path('front_infermier_prescription_pdf', {'id': consultation.prescription.idPrescription}) }}">PDF prescription</a>
                                        {% else %}
                                            <a class="btn btn-success btn-sm" href="{{ path('front_infermier_prescription_new', {'id': consultation.id}) }}">Ajouter prescription</a>
                                        {% endif %}

                                        <form method="post" action="{{ path('front_infermier_consultation_delete', {'id': consultation.id}) }}" class="m-0" onsubmit="return confirm('Supprimer cette consultation ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete_consultation_' ~ consultation.id) }}">
                                            <button class="btn btn-outline-danger btn-sm" type="submit">Supprimer</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="col-12">
                            <div class="consultation-empty-state">
                                <i class="bi bi-calendar-x"></i>
                                <h5>&#x1F4CB; Aucune consultation</h5>
                                <p>Commencez par ajouter une nouvelle consultation &#x1FA79;</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                {% if pagination.pages > 1 %}
                    <div class="consult-pagination d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2 mt-4">
                        <div class="text-muted small ps-3 py-2">
                            Page {{ pagination.page }} / {{ pagination.pages }} - {{ pagination.total }} consultation(s)
                        </div>
                        <nav aria-label="Pagination consultations" class="pe-3 pb-2 pb-md-0">
                            <ul class="pagination mb-0">
                                <li class="page-item {{ pagination.page <= 1 ? 'disabled' : '' }}">
                                    <a class="page-link" href="{{ path('front_infermier_consultation_index', {
                                        patient: filters.patient ?? '',
                                        date: filters.date ?? '',
                                        page: pagination.page - 1
                                    }) }}">Precedent</a>
                                </li>
                                {% for p in 1..pagination.pages %}
                                    <li class="page-item {{ p == pagination.page ? 'active' : '' }}">
                                        <a class="page-link" href="{{ path('front_infermier_consultation_index', {
                                            patient: filters.patient ?? '',
                                            date: filters.date ?? '',
                                            page: p
                                        }) }}">{{ p }}</a>
                                    </li>
                                {% endfor %}
                                <li class="page-item {{ pagination.page >= pagination.pages ? 'disabled' : '' }}">
                                    <a class="page-link" href="{{ path('front_infermier_consultation_index', {
                                        patient: filters.patient ?? '',
                                        date: filters.date ?? '',
                                        page: pagination.page + 1
                                    }) }}">Suivant</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                {% endif %}
            </div>
        </main>
    </div>

    <div class="modal fade consultation-modal" id="consultationNewModal" tabindex="-1" aria-labelledby="consultationNewModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-scrollable modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="consultationNewModalLabel">Nouvelle consultation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                </div>
                <div class="modal-body">
                    <div class="text-muted small">Chargement...</div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const modalEl = document.getElementById('consultationNewModal');
            if (!modalEl) return;

            const modalBody = modalEl.querySelector('.modal-body');
            if (!modalBody) return;

            const bindForm = () => {
                const form = modalBody.querySelector('form');
                if (!form) return;

                form.addEventListener('submit', async (event) => {
                    event.preventDefault();
                    const formData = new FormData(form);

                    try {
                        const response = await fetch(form.action, {
                            method: form.method || 'POST',
                            body: formData,
                            headers: { 'X-Requested-With': 'XMLHttpRequest' }
                        });

                        if (response.redirected) {
                            window.location.href = response.url;
                            return;
                        }

                        if (!response.ok) throw new Error('Envoi impossible.');
                        modalBody.innerHTML = await response.text();
                        bindForm();
                    } catch (e) {
                        modalBody.innerHTML = '<div class="alert alert-danger mb-0">Impossible d\'envoyer le formulaire.</div>';
                    }
                });
            };

            const loadNewForm = async (newUrl) => {
                if (!newUrl) return;
                modalBody.innerHTML = '<div class="text-muted small">Chargement...</div>';
                try {
                    const response = await fetch(newUrl, {
                        headers: { 'X-Requested-With': 'XMLHttpRequest' }
                    });
                    if (!response.ok) throw new Error('Chargement impossible.');
                    modalBody.innerHTML = await response.text();
                    bindForm();
                } catch (e) {
                    modalBody.innerHTML = '<div class="alert alert-danger mb-0">Impossible de charger le formulaire.</div>';
                }
            };

            modalEl.addEventListener('show.bs.modal', async (event) => {
                const trigger = event.relatedTarget;
                if (!trigger) return;
                const newUrl = trigger.getAttribute('data-new-url');
                await loadNewForm(newUrl);
            });

            const triggerBtn = document.querySelector('[data-bs-target="#consultationNewModal"][data-new-url]');
            if (triggerBtn) {
                triggerBtn.addEventListener('click', async () => {
                    const newUrl = triggerBtn.getAttribute('data-new-url');
                    await loadNewForm(newUrl);
                });
            }
        });
    </script>
{% endblock %}
