{% block stylesheets %}
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="{{ asset('css/infermier.css') }}">
{% endblock %}
{% block body %}
	<div class="nurse-app">
		<style>
			.consultation-page{
				background:
					radial-gradient(circle at 12% 10%, rgba(56, 189, 248, 0.18), transparent 40%),
					radial-gradient(circle at 88% 18%, rgba(16, 185, 129, 0.14), transparent 42%),
					linear-gradient(180deg, #f7fbff 0%, #f2fbf7 55%, #ffffff 100%);
				border-radius: 22px;
				padding: 18px;
			}
			.consultation-header{
				background: linear-gradient(135deg, #e6f6ff 0%, #eafff3 60%, #ffffff 100%);
				border-radius: 18px 26px 18px 26px;
				padding: 18px 20px;
				border: 1px solid #e3f0f5;
				box-shadow: 0 12px 26px rgba(15, 23, 42, 0.08);
			}
			.consultation-title{
				color:#153243;
				font-weight:800;
			}
			.consultation-subtitle{
				color:#5b6b74;
				font-weight:700;
			}
			.consultation-card{
				border:1px solid #e6edf0;
				border-radius:20px;
				background:
					linear-gradient(180deg, #ffffff 0%, #f8fbff 100%);
				box-shadow:0 16px 34px rgba(15,23,42,.08);
				position:relative;
				overflow:hidden;
				padding:18px 18px 16px 18px;
			}
			.consultation-card::after{
				content:"";
				position:absolute;
				inset:0;
				border-radius:20px;
				pointer-events:none;
				background:
					radial-gradient(circle at 88% 16%, rgba(56,189,248,.12), transparent 40%),
					radial-gradient(circle at 10% 85%, rgba(16,185,129,.10), transparent 45%);
			}
			.consultation-accent{
				display:none;
			}
			.consultation-card .card-head{
				padding-bottom:10px;
				border-bottom:1px dashed #e4edf4;
				margin-bottom:12px;
			}
			.consultation-card h2{
				font-size:1.05rem;
				font-weight:800;
				color:#0f172a;
			}
			.consultation-card .badge-soft{
				border-radius:999px;
				padding:6px 12px;
				background:linear-gradient(135deg, #e0f2fe 0%, #dcfce7 100%);
				border:1px solid #d6e7ec;
				color:#0f172a;
			}
			.consultation-chip{
				background:#f8fafc;
				border:1px solid #e2e8f0;
				color:#0f172a;
				font-weight:700;
				border-radius:12px;
			}
			.consultation-btn{
				background: linear-gradient(135deg, #7dd3fc 0%, #34d399 100%);
				border:none;
				color:#083344;
				box-shadow:0 10px 20px rgba(14, 116, 144, 0.2);
			}
			.consultation-btn:hover{
				filter:brightness(0.98);
			}
			.btn-sm{
				border-radius:999px;
				border:1px solid #e2e8f0;
				background:#f8fafc;
				color:#0f172a;
			}
			.btn-sm.primary{
				background:#e0f2fe;
				color:#075985;
				border-color:#bae6fd;
			}
			.btn-sm.danger{
				background:#fee2e2;
				color:#991b1b;
				border-color:#fecaca;
			}
			.btn-outline{
				background:#fff7ed;
				color:#9a3412;
				border:1px solid #fed7aa;
			}
		</style>
		{% include 'FrontOffice/infermier/_header.html.twig' %}

		<main class="nurse-main consultation-page">
			<section class="consultation-header">
				<div class="card-head">
					<div>
						<h2 class="consultation-title">Gestion des consultations</h2>
						<p class="consultation-subtitle">Suivi des consultations creees pour vos patients.</p>
					</div>
					<button class="btn-sm consultation-btn"
						type="button"
						data-bs-toggle="modal"
						data-bs-target="#consultationNewModal"
						data-new-url="{{ path('front_infermier_consultation_new') }}">
						Nouvelle consultation
					</button>
				</div>
			</section>

			<section class="card consult-filters">
				<div class="card-head">
					<h2>Filtres</h2>
				</div>
				<form method="get" action="{{ path('front_infermier_consultation_index') }}">
					<div class="form-grid">
						<div class="full">
							<label class="form-label" for="filter-patient">Patient</label>
							<input id="filter-patient" name="patient" class="form-control" type="text"
								value="{{ filters.patient ?? '' }}" placeholder="Nom ou prenom du patient">
						</div>
						<div class="full">
							<label class="form-label" for="filter-date">Date consultation</label>
							<input id="filter-date" name="date" class="form-control" type="date"
								value="{{ filters.date ?? '' }}">
						</div>
					</div>
					<div class="form-actions">
						<button class="btn-solid" type="submit">Filtrer</button>
						<a class="btn-outline" href="{{ path('front_infermier_consultation_index') }}">Reinitialiser</a>
					</div>
				</form>
			</section>

			<section class="grid consult-grid">
				{% for consultation in consultations %}
					{% set status = consultation.etatConsultation ? consultation.etatConsultation|lower : '' %}
					{% set status_label = status == 'en_cours' ? 'En cours'
						: (status == 'terminee' or status == 'terminée' ? 'Terminee'
						: (status == 'planifiee' or status == 'planifiée' ? 'Planifiee'
						: (status == 'realisee' or status == 'réalisée' ? 'Realisee'
						: (status == 'annulee' or status == 'annulée' ? 'Annulee' : (consultation.etatConsultation ?? ''))))) %}
					<div class="card consultation-card" data-status="{{ status }}">
						<div class="consultation-accent"></div>
						<div class="card-head">
							<h2>Consultation {{ consultation.id }}</h2>
							<span class="badge-soft">{{ status_label }}</span>
						</div>
						<div class="consultation-meta">
							<span class="consultation-chip">Patient: {{ consultation.patient.prenom }} {{ consultation.patient.nom }}</span>
							<span class="consultation-chip">Type: {{ consultation.typeConsultation }}</span>
						</div>
						<div class="consultation-meta">
							<span class="consultation-chip">Date: {{ consultation.dateConsultation ? consultation.dateConsultation|date('d/m/Y') : '-' }}</span>
							<span class="consultation-chip">Heure: {{ consultation.heureConsultation ? consultation.heureConsultation|date('H:i') : '-' }}</span>
							{% if consultation.lieu %}
								<span class="consultation-chip">Lieu: {{ consultation.lieu }}</span>
							{% endif %}
						</div>
						<div class="consultation-grid">
							<div class="consultation-row">
								<div class="consultation-label">Personnel medical</div>
								<div class="value">
									{% if consultation.personnelMedical %}
										{{ consultation.personnelMedical.prenom }} {{ consultation.personnelMedical.nom }}
									{% else %}
										-
									{% endif %}
								</div>
							</div>
							<div class="consultation-row">
								<div class="consultation-label">Cree par</div>
								<div class="value">
									{% if consultation.createdBy %}
										{{ consultation.createdBy.prenom }} {{ consultation.createdBy.nom }}
										{% if consultation.createdRole ?? false %}
											<span class="muted">• {{ consultation.createdRole }}</span>
										{% elseif consultation.createdBy.role %}
											<span class="muted">• {{ consultation.createdBy.role.value }}</span>
										{% endif %}
									{% else %}
										-
									{% endif %}
								</div>
							</div>
						</div>
						<div class="consultation-actions">
							<a class="btn-sm primary" href="{{ path('front_infermier_consultation_edit', {'id': consultation.id}) }}">Modifier</a>
							{% if consultation.rapportMedical %}
								<a class="btn-sm" href="{{ path('front_infermier_rapport_show', {'id': consultation.rapportMedical.idRapport}) }}">Rapport</a>
								<a class="btn-sm" href="{{ path('front_infermier_rapport_pdf', {'id': consultation.rapportMedical.idRapport}) }}">PDF rapport</a>
							{% else %}
								<a class="btn-sm primary" href="{{ path('front_infermier_rapport_new', {'id': consultation.id}) }}">Ajouter rapport</a>
							{% endif %}

							{% if consultation.prescription %}
								<a class="btn-sm" href="{{ path('front_infermier_prescription_show', {'id': consultation.prescription.idPrescription}) }}">Prescription</a>
								<a class="btn-sm" href="{{ path('front_infermier_prescription_pdf', {'id': consultation.prescription.idPrescription}) }}">PDF prescription</a>
							{% else %}
								<a class="btn-sm primary" href="{{ path('front_infermier_prescription_new', {'id': consultation.id}) }}">Ajouter prescription</a>
							{% endif %}
							<form method="post" action="{{ path('front_infermier_consultation_delete', {'id': consultation.id}) }}"
								onsubmit="return confirm('Supprimer cette consultation ?');">
								<input type="hidden" name="_token" value="{{ csrf_token('delete_consultation_' ~ consultation.id) }}">
								<button class="btn-sm danger" type="submit">Supprimer</button>
							</form>
						</div>
					</div>
				{% else %}
					<div class="card consultation-card">
						<div class="consultation-accent"></div>
						<p class="muted">Aucune consultation pour le moment.</p>
					</div>
				{% endfor %}
			</section>
		</main>
	</div>

	<div class="modal fade" id="consultationNewModal" tabindex="-1" aria-labelledby="consultationNewModalLabel" aria-hidden="true">
		<div class="modal-dialog modal-lg modal-dialog-scrollable modal-dialog-centered">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="consultationNewModalLabel">Nouvelle consultation</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
				</div>
				<div class="modal-body">
					<div class="text-muted small">Chargement...</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
	<script>
		document.addEventListener('DOMContentLoaded', () => {
			const modalEl = document.getElementById('consultationNewModal');
			if (!modalEl) return;

			const modalBody = modalEl.querySelector('.modal-body');
			if (!modalBody) return;

			const bindForm = () => {
				const form = modalBody.querySelector('form');
				if (!form) return;

				form.addEventListener('submit', async (event) => {
					event.preventDefault();
					const formData = new FormData(form);

					try {
						const response = await fetch(form.action, {
							method: form.method || 'POST',
							body: formData,
							headers: { 'X-Requested-With': 'XMLHttpRequest' }
						});

						if (response.redirected) {
							window.location.href = response.url;
							return;
						}

						if (!response.ok) throw new Error('Envoi impossible.');
						modalBody.innerHTML = await response.text();
						bindForm();
					} catch (e) {
						modalBody.innerHTML = '<div class="alert alert-danger mb-0">Impossible d\'envoyer le formulaire.</div>';
					}
				});
			};

			const loadNewForm = async (newUrl) => {
				if (!newUrl) return;
				modalBody.innerHTML = '<div class="text-muted small">Chargement...</div>';
				try {
					const response = await fetch(newUrl, {
						headers: { 'X-Requested-With': 'XMLHttpRequest' }
					});
					if (!response.ok) throw new Error('Chargement impossible.');
					modalBody.innerHTML = await response.text();
					bindForm();
				} catch (e) {
					modalBody.innerHTML = '<div class="alert alert-danger mb-0">Impossible de charger le formulaire.</div>';
				}
			};

			modalEl.addEventListener('show.bs.modal', async (event) => {
				const trigger = event.relatedTarget;
				if (!trigger) return;
				const newUrl = trigger.getAttribute('data-new-url');
				await loadNewForm(newUrl);
			});

			const triggerBtn = document.querySelector('[data-bs-target="#consultationNewModal"][data-new-url]');
			if (triggerBtn) {
				triggerBtn.addEventListener('click', async () => {
					const newUrl = triggerBtn.getAttribute('data-new-url');
					await loadNewForm(newUrl);
				});
			}
		});
	</script>
{% endblock %}
