{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/patient.css') }}?v=2">
{% endblock %}

{% block public_nav %}{% endblock %}

{% block body %}
<div class="patient-app">
    {% include 'FrontOffice/patient/_header.html.twig' %}

    <main class="patient-main">
        <!-- HERO -->
        <section class="profile-hero">
            <div>
                <h1>Mon profil</h1>
                <p>Un espace clair et soigné pour vos informations personnelles.</p>
            </div>
            <div class="profile-badge">Profil patient</div>
        </section>

        <!-- PROFILE CONTENT -->
        <section class="profile-shell">
            <div class="profile-card">
                <h2>Informations</h2>
                {% include 'FrontOffice/patient/_profile_form.html.twig' with { form: form } %}

                <div class="actions" style="margin-top: 12px;">
                    <a class="btn ghost" href="{{ path('app_patient_interfce') }}">← Retour</a>
                </div>
            </div>

            <div class="profile-side">
                <div class="profile-mini">
                    <div class="mini-title">✨ Conseils</div>
                    <ul class="mini-list">
                        <li>Gardez votre email à jour.</li>
                        <li>Ajoutez un numéro valide.</li>
                        <li>Vérifiez la date de naissance.</li>
                    </ul>
                </div>
                <div class="profile-mini">
                    <div class="mini-title">Sécurité</div>
                    <p class="mini-text">Vos informations sont protégées et visibles uniquement par vous.</p>
                </div>
            </div>
        </section>
    </main>
</div>
{% endblock %}
