{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/patient.css') }}?v=20260214-notif1">
	<head>
		<meta charset="UTF-8">
		<title>Forum communautaire</title>
		<meta
		name="viewport" content="width=device-width, initial-scale=1">

		{# Bootstrap CSS #}
		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

		{# Bootstrap Icons #}
		<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

		<link rel="stylesheet" href="{{ asset('css/patient.css') }}?v=20260214-notif1">
		<link rel="stylesheet" href="{{ asset('css/patient-rendezvous.css') }}?v=20260214-7">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
	</head>
{% endblock %}

{% block body %}
	<div class="patient-app">
		<style>
			.cute-header {
				display: flex;
				align-items: center;
				justify-content: space-between;
				gap: 12px;
				padding: 18px 20px;
				border-radius: 18px;
				background: linear-gradient(135deg, #ffeef6 0%, #e8f7ff 100%);
				border: 1px solid #f4d9e7;
			}

			.cute-title {
				font-size: 1.35rem;
				font-weight: 800;
				color: #7a2c4c;
			}

			.cute-chip {
				display: inline-flex;
				align-items: center;
				gap: 6px;
				padding: 6px 10px;
				border-radius: 999px;
				background: #fff5fb;
				border: 1px solid #f4d9e7;
				font-size: 0.8rem;
				font-weight: 700;
				color: #7a2c4c;
			}

			.cute-grid {
				display: grid;
				gap: 12px;
				grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
			}

			.cute-card {
				background: #ffffff;
				border: 1px solid #f0ddea;
				border-radius: 16px;
				padding: 14px;
				box-shadow: 0 10px 24px rgba(122, 44, 76, 0.08);
			}

			.cute-label {
				font-size: 0.7rem;
				text-transform: uppercase;
				letter-spacing: 0.05em;
				color: #a0627b;
				font-weight: 700;
			}

			.cute-value {
				font-weight: 800;
				color: #3b1c2a;
				margin-top: 4px;
			}
		</style>
		{% include 'FrontOffice/patient/_header.html.twig' %}

		<main class="patient-main">
			<section class="cute-header">
				<div>
					<div class="cute-title">Prescription</div>
					<div class="cute-chip">Consultation {{ prescription.consultation.id }}</div>
				</div>
				<div class="cute-chip">Prenez soin de vous</div>
			</section>

			<section class="content-grid" style="grid-template-columns: 1fr;">
				<div class="card">
					<h2>Details bien-etre</h2>
					<div class="cute-grid">
						<div class="cute-card">
							<div class="cute-label">Frequence</div>
							<div class="cute-value">{{ prescription.frequence }}</div>
						</div>
						<div class="cute-card">
							<div class="cute-label">Dosage</div>
							<div class="cute-value">{{ prescription.dosage }}</div>
						</div>
						<div class="cute-card">
							<div class="cute-label">Duree</div>
							<div class="cute-value">{{ prescription.dureeTraitement }}</div>
						</div>
						<div class="cute-card">
							<div class="cute-label">Periode</div>
							<div class="cute-value">
								{{ prescription.dateDebut ? prescription.dateDebut|date('d/m/Y') : '-' }}
								->
								{{ prescription.dateFin ? prescription.dateFin|date('d/m/Y') : '-' }}
							</div>
						</div>
					</div>
					<div class="item">
						<strong>Medicaments</strong>
						<p>{{ prescription.medicaments }}</p>
					</div>
					<div class="item">
						<strong>Consignes</strong>
						<p>{{ prescription.consignes ?: '-' }}</p>
					</div>
					<div class="actions">
						<a class="btn primary" href="{{ path('patient_prescription_pdf', {'id': prescription.idPrescription}) }}">Telecharger PDF</a>
						<a class="btn ghost" href="{{ path('patient_consultations') }}">Retour</a>
					</div>
				</div>
			</section>
		</main>
	</div>
{% endblock %}
