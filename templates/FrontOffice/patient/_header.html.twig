<header class="topbar">
    <div class="topbar-inner">

        <!-- BRAND -->
        <a href="{{ path('app_public_site') }}" class="brand">
            <img src="{{ asset('img/logo.png') }}" alt="Elder HealthCare">
            <span class="brand-text">
                <span class="fw-bold text-primary">Elder</span>
                <span class="fw-bold text-warning ms-1">HealthCare</span>
            </span>
        </a>

        <!-- NAV -->
        <nav class="top-nav">
            <a class="active">Accueil</a>
            <a href="{{ path('patient_rendezvous_index') }}">Rendez-vous</a>
            <a href="{{ path('patient_consultations') }}">Consultation</a>
            <a href="{{ path('equipment_list_index') }}">Equipement</a>
            <a href="{{ path('forum_post_forum_index') }}">Forum</a>
            <a href="{{ path('front_events_index') }}">Evenements</a>
            <a>Messages</a>
            <a>Alertes</a>
        </nav>

        <!-- PROFILE -->
        <a class="profile" href="{{ path('patient_profile') }}">
            <div class="profile-emoji">ðŸ™‚</div>
            {% set display_name = 'Patient' %}
            {% if app.user %}
                {% if app.user.prenom is defined and app.user.nom is defined %}
                    {% set display_name = app.user.prenom ~ ' ' ~ app.user.nom %}
                {% elseif app.user.email is defined %}
                    {% set display_name = app.user.email %}
                {% endif %}
            {% endif %}
            <strong>{{ display_name }}</strong>
        </a>

    </div>
</header>
