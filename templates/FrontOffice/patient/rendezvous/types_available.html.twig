<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="{{ asset('css/patient.css') }}?v=20260214-notif1">
<link rel="stylesheet" href="{{ asset('css/patient-rendezvous.css') }}?v=20260217-1">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

{% block body %}
<div class="patient-app">
    {% include 'FrontOffice/patient/_header.html.twig' %}
    <main class="patient-main">
        <section class="welcome-card">
            <div class="welcome-content">
                <h1>Types de rendez-vous disponibles</h1>
                <p>Consultez les types, leurs durees et tarifs avant de choisir un creneau.</p>
                <div class="actions">
                    <a class="btn ghost" href="{{ path('patient_rendezvous_new') }}">Retour au formulaire</a>
                </div>
            </div>
        </section>

        <section class="content-grid">
            <div class="card" style="grid-column: 1 / -1;">
                <div class="rdv-cards">
                    {% for type in typesRendezVous %}
                        <div class="rdv-card">
                            <div class="rdv-main">
                                <div class="rdv-people">
                                    <div class="rdv-patient">
                                        <span class="label">Type</span>
                                        <span class="value">{{ type.type }}</span>
                                    </div>
                                    <div class="rdv-personnel">
                                        <span class="label">Duree</span>
                                        <span class="value">
                                            <i class="bi bi-clock"></i>
                                            {{ type.duree }} min
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="rdv-side">
                                <div class="rdv-type">
                                    <span class="badge bg-info text-white">
                                        {{ type.tarif }} DT
                                    </span>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="text-muted p-3">Aucun type de rendez-vous disponible.</div>
                    {% endfor %}
                </div>
            </div>
        </section>
    </main>
</div>
{% endblock %}
