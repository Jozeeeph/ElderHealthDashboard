{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function () {
    const select = document.getElementById('patient_rendez_vous_personnelMedical');
    const meta = document.getElementById('personnel-meta');
    const fonctionTarget = meta ? meta.querySelector('[data-meta-fonction]') : null;
    const specialiteTarget = meta ? meta.querySelector('[data-meta-specialite]') : null;

    if (!select || !meta || !fonctionTarget || !specialiteTarget) {
        return;
    }

    const updateMeta = function () {
        const option = select.options[select.selectedIndex];
        if (!option || !option.value) {
            meta.hidden = true;
            return;
        }

        const fonction = (option.dataset.fonction || '').trim();
        const specialite = (option.dataset.specialite || '').trim();
        const roleMetier = (option.dataset.roleMetier || '').trim();

        fonctionTarget.textContent = fonction || roleMetier || 'Personnel medical';
        specialiteTarget.textContent = specialite || 'Specialite non renseignee';
        meta.hidden = false;
    };

    select.addEventListener('change', updateMeta);
    updateMeta();
});
</script>
{% endblock %}
