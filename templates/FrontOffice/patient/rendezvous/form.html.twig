{% block body %}
<div class="patient-app">
    {% include 'FrontOffice/patient/_header.html.twig' %}

    <main class="patient-main">
        <section class="welcome-card">
            <div class="welcome-content">
                <h1>{{ mode == 'edit' ? 'Modifier un rendez-vous' : 'Ajouter un rendez-vous' }}</h1>
                <p>Remplissez le formulaire puis enregistrez.</p>
                <div class="actions">
                    <a class="btn ghost" href="{{ path('patient_rendezvous_index') }}">Retour</a>
                </div>
            </div>
        </section>

        <section class="content-grid">
            <div class="card" style="grid-column: 1 / -1;">
                <div class="rdv-form-shell">
                    <div class="rdv-form-card">
                        <div class="rdv-form-head">
                            <h2>
                                <i class="bi bi-calendar2-plus"></i>
                                {{ mode == 'edit' ? 'Modifier' : 'Ajouter' }} un rendez-vous
                            </h2>
                            <p>Completez les informations puis validez l'enregistrement.</p>
                            <a class="btn btn-outline-primary btn-sm" href="{{ path('patient_rendezvous_types_available') }}">
                                <i class="bi bi-tags"></i>
                                Consulter les types disponibles
                            </a>
                        </div>

                        {{ form_start(form, {'attr': {'id': 'rdvForm', 'class': 'rdv-form', 'novalidate': 'novalidate'}}) }}
                        {% if form_errors(form) %}
                            <div class="rdv-form-error">
                                {{ form_errors(form) }}
                            </div>
                        {% endif %}

                        <div class="rdv-form-grid">
                            <div class="rdv-field">{{ form_row(form.date) }}</div>
                            <div class="rdv-field">{{ form_row(form.heure) }}</div>
                            <div class="rdv-field">{{ form_row(form.lieu) }}</div>
                            <div class="rdv-field">
                                {{ form_row(form.personnelMedical) }}
                                <div id="personnel-meta" class="rdv-personnel-meta" hidden>
                                    <span class="rdv-meta-chip"><i class="bi bi-person-badge"></i><span data-meta-fonction>-</span></span>
                                    <span class="rdv-meta-chip"><i class="bi bi-hospital"></i><span data-meta-specialite>-</span></span>
                                </div>
                            </div>
                            <div class="rdv-field rdv-field-wide">{{ form_row(form.typeRendezVous) }}</div>
                        </div>
                        <div id="rdv-slot-feedback" class="alert d-none mt-3 mb-0" role="alert"></div>

                        <div class="rdv-form-actions">
                            <a href="{{ path('patient_rendezvous_index') }}" class="rdv-btn rdv-btn-secondary">Annuler</a>
                            <button type="submit" class="rdv-btn rdv-btn-primary">Enregistrer</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </section>
    </main>
</div>
{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function () {
    const formEl = document.getElementById('rdvForm');
    const select = document.getElementById('patient_rendez_vous_personnelMedical');
    const typeSelect = document.getElementById('patient_rendez_vous_typeRendezVous');
    const dateInput = document.getElementById('patient_rendez_vous_date');
    const timeInput = document.getElementById('patient_rendez_vous_heure');
    const meta = document.getElementById('personnel-meta');
    const feedback = document.getElementById('rdv-slot-feedback');
    const submitBtn = formEl ? formEl.querySelector('button[type="submit"]') : null;
    const fonctionTarget = meta ? meta.querySelector('[data-meta-fonction]') : null;
    const specialiteTarget = meta ? meta.querySelector('[data-meta-specialite]') : null;
    let slotAvailable = true;

    if (!select || !meta || !fonctionTarget || !specialiteTarget) {
        return;
    }

    const updateMeta = function () {
        const option = select.options[select.selectedIndex];
        if (!option || !option.value) {
            meta.hidden = true;
            return;
        }

        const fonction = (option.dataset.fonction || '').trim();
        const specialite = (option.dataset.specialite || '').trim();
        const roleMetier = (option.dataset.roleMetier || '').trim();

        fonctionTarget.textContent = fonction || roleMetier || 'Personnel medical';
        specialiteTarget.textContent = specialite || 'Specialite non renseignee';
        meta.hidden = false;
    };

    const setFeedback = function (type, message) {
        if (!feedback) {
            return;
        }
        if (!message) {
            feedback.classList.add('d-none');
            feedback.classList.remove('alert-danger', 'alert-success', 'alert-warning');
            feedback.textContent = '';
            return;
        }
        feedback.classList.remove('d-none', 'alert-danger', 'alert-success', 'alert-warning');
        feedback.classList.add(type === 'danger' ? 'alert-danger' : (type === 'success' ? 'alert-success' : 'alert-warning'));
        feedback.textContent = message;
    };

    const updateSubmitState = function () {
        if (!submitBtn) {
            return;
        }
        submitBtn.disabled = !slotAvailable;
    };

    const checkSlot = function () {
        if (!dateInput || !timeInput || !select) {
            return;
        }

        const personnelId = select.value || '';
        const date = dateInput.value || '';
        const heure = timeInput.value || '';
        const typeId = typeSelect ? (typeSelect.value || '') : '';
        const excludeId = "{{ form.vars.value and form.vars.value.id ? form.vars.value.id : '' }}";

        if (!personnelId || !date || !heure) {
            slotAvailable = true;
            setFeedback('', '');
            updateSubmitState();
            return;
        }

        const params = new URLSearchParams({
            personnelId: personnelId,
            date: date,
            heure: heure
        });
        if (typeId) {
            params.append('typeId', typeId);
        }
        if (excludeId) {
            params.append('excludeId', excludeId);
        }

        fetch("{{ path('api_calendar_availability_check') }}?" + params.toString(), {
            method: 'GET',
            headers: {'X-Requested-With': 'XMLHttpRequest'}
        })
            .then(function (response) { return response.json(); })
            .then(function (data) {
                if (!data || data.ok !== true) {
                    slotAvailable = true;
                    setFeedback('warning', (data && data.message) ? data.message : 'Verification indisponible.');
                    updateSubmitState();
                    return;
                }

                slotAvailable = !!data.available;
                if (slotAvailable) {
                    setFeedback('success', 'Creneau disponible.');
                } else {
                    setFeedback('danger', data.message || 'Ce creneau est deja planifie.');
                }
                updateSubmitState();
            })
            .catch(function () {
                slotAvailable = true;
                setFeedback('warning', 'Verification du creneau momentanement indisponible.');
                updateSubmitState();
            });
    };

    select.addEventListener('change', updateMeta);
    select.addEventListener('change', checkSlot);
    if (typeSelect) {
        typeSelect.addEventListener('change', checkSlot);
    }
    if (dateInput) {
        dateInput.addEventListener('change', checkSlot);
    }
    if (timeInput) {
        timeInput.addEventListener('change', checkSlot);
        timeInput.addEventListener('blur', checkSlot);
    }
    if (formEl) {
        formEl.addEventListener('submit', function (event) {
            if (!slotAvailable) {
                event.preventDefault();
                setFeedback('danger', 'Impossible d enregistrer: ce creneau est deja planifie.');
            }
        });
    }
    updateMeta();
    checkSlot();
    window.setInterval(function () {
        checkSlot();
    }, 5000);
});
</script>
{% endblock %}

