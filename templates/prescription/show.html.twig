{% extends 'base.html.twig' %}

{% block title %}Prescription{% endblock %}

{% block body %}
<style>
.prescription-shell {
    --ink: #1e2a2f;
    --muted: #6c7a80;
    --brand: #0e8aa7;
    --brand-2: #2bbf9f;
    --card: #ffffff;
    --ring: rgba(14, 138, 167, 0.2);
}

.prescription-header {
    background: linear-gradient(135deg, #eef2ff 0%, #f1f7f4 100%);
    border-radius: 18px 28px 18px 28px;
    padding: 16px 20px;
    border: 1px solid #e1e7f0;
}

.prescription-title {
    color: var(--ink);
}

.prescription-actions .btn {
    border-radius: 999px;
    padding: 8px 16px;
}

.prescription-card {
    border: 1px solid #e6edf0;
    border-radius: 18px 28px 18px 28px;
    background: var(--card);
}

.prescription-grid {
    display: grid;
    gap: 14px;
}

.prescription-hero {
    display: grid;
    gap: 12px;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    padding: 16px;
    border-radius: 16px;
    background: linear-gradient(135deg, rgba(238, 242, 255, 0.7), rgba(241, 247, 244, 0.9));
    border: 1px solid #dfe7f5;
}

.prescription-hero .hero-chip {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 10px 12px;
    border-radius: 14px;
    background: #ffffff;
    border: 1px solid #e7edf6;
    box-shadow: 0 6px 14px rgba(52, 68, 92, 0.08);
}

.hero-icon {
    width: 36px;
    height: 36px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    background: #f1f5ff;
    color: #3a5a7b;
    font-size: 1rem;
}

.hero-label {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: #5c6b79;
    font-weight: 700;
}

.hero-value {
    font-weight: 700;
    color: #1e2a2f;
}

.prescription-pill {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 12px;
    border-radius: 999px;
    background: #eef6f8;
    border: 1px solid #d6e7ec;
    color: #1a5b6b;
    font-size: 0.85rem;
    font-weight: 600;
}

.prescription-section {
    padding: 16px;
    border-radius: 16px;
    border: 1px solid #e6edf0;
    background: #ffffff;
    box-shadow: 0 10px 24px rgba(30, 42, 47, 0.08);
}

.section-title {
    display: flex;
    align-items: center;
    gap: 10px;
    font-weight: 700;
    color: #1f2d34;
    margin-bottom: 10px;
}

.section-title .section-icon {
    width: 34px;
    height: 34px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    background: #eef4ff;
    color: #2f5b7c;
    font-size: 0.95rem;
}

.prescription-text {
    font-weight: 600;
    color: #2b3d46;
    line-height: 1.5;
}

.prescription-notes {
    background: #f7fbff;
    border: 1px dashed #cfe0f2;
    border-radius: 14px;
    padding: 12px 14px;
    font-weight: 600;
    color: #294255;
}

.prescription-modal .modal-content {
    border: none;
    border-radius: 20px 28px 20px 28px;
    box-shadow: 0 18px 48px rgba(30, 42, 47, 0.2);
    background: #ffffff;
}

.prescription-modal .modal-header {
    border: 0;
    background: linear-gradient(135deg, #eef2ff 0%, #f1f7f4 100%);
    border-radius: 20px 28px 0 0;
    padding: 16px 20px;
}

.prescription-modal .modal-title {
    font-weight: 700;
    color: #1e2a2f;
}

.prescription-modal .modal-body {
    padding: 18px 20px 22px;
    background: #ffffff;
}
</style>

<div class="prescription-shell container py-4">
    <div class="prescription-header d-flex flex-wrap justify-content-between align-items-start mb-3 gap-2">
        <div>
            <h1 class="prescription-title mb-1">üíä Prescription</h1>
            <div class="text-muted">
                üßë‚Äçü¶≥ Consultation #{{ prescription.consultation.id }} - {{ prescription.consultation.patient.prenom }} {{ prescription.consultation.patient.nom }}
            </div>
        </div>
        <div class="prescription-actions d-flex gap-2">
            <a class="btn btn-outline-secondary" href="{{ path('prescription_pdf', {'id': prescription.idPrescription}) }}">üìÑ T√©l√©charger PDF</a>
            <button type="button"
                    class="btn btn-outline-primary"
                    data-bs-toggle="modal"
                    data-bs-target="#prescriptionEditModal"
                    data-edit-url="{{ path('prescription_edit', {'id': prescription.idPrescription}) }}">
                ‚úèÔ∏è Modifier
            </button>
            <button type="button"
                    class="btn btn-outline-danger"
                    data-bs-toggle="modal"
                    data-bs-target="#prescriptionDeleteModal"
                    data-delete-url="{{ path('prescription_delete', {'id': prescription.idPrescription}) }}"
                    data-delete-token="{{ csrf_token('delete_prescription_' ~ prescription.idPrescription) }}">
                üóëÔ∏è Supprimer
            </button>
        </div>
    </div>

    <div class="card shadow-sm prescription-card">
        <div class="card-body">
            <div class="prescription-grid">
                <div class="prescription-hero">
                    <div class="hero-chip">
                        <span class="hero-icon">üîÅ</span>
                        <div>
                            <div class="hero-label">Fr√©quence</div>
                            <div class="hero-value">{{ prescription.frequence }}</div>
                        </div>
                    </div>
                    <div class="hero-chip">
                        <span class="hero-icon">üìè</span>
                        <div>
                            <div class="hero-label">Dosage</div>
                            <div class="hero-value">{{ prescription.dosage }}</div>
                        </div>
                    </div>
                    <div class="hero-chip">
                        <span class="hero-icon">üìÜ</span>
                        <div>
                            <div class="hero-label">Dur√©e</div>
                            <div class="hero-value">{{ prescription.dureeTraitement }}</div>
                        </div>
                    </div>
                    <div class="hero-chip">
                        <span class="hero-icon">üóìÔ∏è</span>
                        <div>
                            <div class="hero-label">P√©riode</div>
                            <div class="hero-value">
                                {{ prescription.dateDebut ? prescription.dateDebut|date('d/m/Y') : '-' }}
                                ‚Üí
                                {{ prescription.dateFin ? prescription.dateFin|date('d/m/Y') : '-' }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="prescription-section">
                    <div class="section-title">
                        <span class="section-icon">üíä</span>
                        M√©dicaments
                    </div>
                    <div class="prescription-text">{{ prescription.medicaments }}</div>
                </div>

                <div class="prescription-section">
                    <div class="section-title">
                        <span class="section-icon">üìù</span>
                        Consignes
                    </div>
                    <div class="prescription-notes">üìù {{ prescription.consignes ?: '-' }}</div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a class="btn btn-light" href="{{ path('consultation_index') }}">Retour</a>
    </div>
</div>

<div class="modal fade prescription-modal" id="prescriptionEditModal" tabindex="-1" aria-labelledby="prescriptionEditModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="prescriptionEditModalLabel">Modifier prescription</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <div class="modal-body">
                <div class="text-muted small">Chargement...</div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade prescription-modal" id="prescriptionDeleteModal" tabindex="-1" aria-labelledby="prescriptionDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="prescriptionDeleteModalLabel">Confirmer la suppression</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <div class="modal-body">
                <div class="mb-2">Voulez-vous vraiment supprimer cette prescription ?</div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Annuler</button>
                <form method="post" action="">
                    <input type="hidden" name="_token" value="">
                    <button type="submit" class="btn btn-danger">Supprimer</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const editModal = document.getElementById('prescriptionEditModal');
    const deleteModal = document.getElementById('prescriptionDeleteModal');
    if (!editModal || !deleteModal) return;

    const loadFormIntoModal = async (modal, url) => {
        const modalBody = modal.querySelector('.modal-body');
        if (!modalBody) return;
        modalBody.innerHTML = '<div class="text-muted small">Chargement...</div>';
        try {
            const response = await fetch(url, {
                headers: { 'X-Requested-With': 'XMLHttpRequest' }
            });
            if (!response.ok) {
                throw new Error('Erreur de chargement');
            }
            const html = await response.text();
            modalBody.innerHTML = html;
        } catch (e) {
            modalBody.innerHTML = '<div class="alert alert-danger mb-0">Impossible de charger le formulaire.</div>';
        }
    };

    editModal.addEventListener('show.bs.modal', async (event) => {
        const trigger = event.relatedTarget;
        if (!trigger) return;
        const editUrl = trigger.getAttribute('data-edit-url');
        if (!editUrl) return;
        await loadFormIntoModal(editModal, editUrl);
    });

    deleteModal.addEventListener('show.bs.modal', (event) => {
        const trigger = event.relatedTarget;
        if (!trigger) return;
        const deleteUrl = trigger.getAttribute('data-delete-url');
        const deleteToken = trigger.getAttribute('data-delete-token');
        const form = deleteModal.querySelector('form');
        const tokenInput = deleteModal.querySelector('input[name="_token"]');
        if (form && deleteUrl) {
            form.setAttribute('action', deleteUrl);
        }
        if (tokenInput && deleteToken) {
            tokenInput.value = deleteToken;
        }
    });
});
</script>
{% endblock %}
