<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{% block title %}My Symfony App{% endblock %}</title>

    {# Bootstrap CSS #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    {# Icons #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    {# Custom CSS (déjà utilisé) #}
    <link href="{{ asset('css/sb-admin-2.min.css') }}" rel="stylesheet">

    {# ✅ NEW: ton design sidebar bleu + layout #}
    <link rel="stylesheet" href="{{ asset('css/elder-layout.css') }}">

    {% block stylesheets %}{% endblock %}
</head>

<body class="elder-body">

{# Navigation #}
<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm elder-topnav">
    <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center" href="{{ path('app_home') }}">
            <img src="{{ asset('img/logo.png') }}" alt="Elder HealthCare" height="50" class="me-2">
            <span class="fw-bold text-primary">Elder</span>
            <span class="fw-bold text-warning ms-1">HealthCare</span>
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin_home') }}">
                        <i class="fas fa-house-medical me-1"></i>
                        Accueil
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link fw-semibold text-primary" href="{{ path('app_public_site') }}">
                        <i class="fas fa-globe me-1"></i>
                        Accéder au site
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_dashboard') }}">
                        <i class="fas fa-heart-pulse me-1"></i>
                        Tableau de bord
                    </a>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                        <i class="fas fa-user-nurse me-1"></i>
                        Mon compte
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <a class="dropdown-item" href="#">
                                <i class="fas fa-gear me-2"></i>
                                Paramètres
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item text-danger" href="{{ path('app_logout') }}">
                                <i class="fas fa-right-from-bracket me-2"></i>
                                Déconnexion
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>

{# Page Layout #}
<div class="container-fluid elder-layout">
    <div class="row">

        {# Sidebar #}
        <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block elder-sidebar">
            <div class="elder-sidebar-inner">

                <div class="elder-sidebar-header">
                    <div class="elder-mini-brand">
                        <img src="{{ asset('img/logo.png') }}" alt="logo" class="elder-mini-logo">
                        <div class="elder-mini-title">
                            <div class="t1">Elder</div>
                            <div class="t2">HealthCare</div>
                        </div>
                    </div>
                </div>

                <ul class="nav flex-column elder-nav">
                    <li class="nav-item">
                        <a class="nav-link elder-link" href="{{ path('event_index') }}">
                            <i class="fas fa-calendar-days me-2"></i> Événements
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link elder-link" href="{{ path('appointment_index') }}">
                            <i class="fas fa-clock me-2"></i> Rendez-vous
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link elder-link" href="{{ path('consultation_index') }}">
                            <i class="fas fa-stethoscope me-2"></i> Consultations
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link elder-link" href="{{ path('forum_post_index') }}">
                            <i class="fas fa-comments me-2"></i> Forum
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link elder-link" href="{{ path('equipment_index') }}">
                            <i class="fas fa-hospital me-2"></i> Équipements médicaux
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link elder-link" href="{{ path('admin_users_index') }}">
                            <i class="fas fa-users me-2"></i> Utilisateurs
                        </a>
                    </li>
                </ul>

                <div class="elder-sidebar-footer">
                    <a class="elder-logout" href="{{ path('app_logout') }}">
                        Déconnexion
                    </a>
                </div>
            </div>
        </nav>

        {# Main #}
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 elder-main">
            {% block body %}{% endblock %}
        </main>

    </div>
</div>

{% include 'partials/_footer.html.twig' %}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="{{ asset('js/sb-admin-2.min.js') }}"></script>

{% block javascripts %}{% endblock %}
</body>
</html>
