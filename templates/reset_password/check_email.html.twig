{% extends 'base_public.html.twig' %}

{% block title %}Password Reset Email Sent{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/reset_check_email.css') }}">
{% endblock %}

{% block body %}
<div class="reset-wrapper">

    <div class="reset-box">

        <div class="reset-logo">
            <img src="{{ asset('images/logo.jpeg') }}" alt="Elder HealthCare Logo">
        </div>

        <h1 class="reset-title">Check your email</h1>
        <p class="reset-subtitle">
            If an account matching your email exists, we just sent a reset link.
        </p>

        <div class="reset-info">
            This link will expire in
            <strong>{{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}</strong>.
        </div>

        <p class="reset-help">
            If you donâ€™t receive an email, check your spam folder or
            <a class="reset-link" href="{{ path('app_forgot_password_request') }}">try again</a>.
        </p>

        <div class="reset-footer">
            <a class="reset-link" href="{{ path('app_login') }}">Back to login</a>
        </div>

    </div>

</div>
{% endblock %}
